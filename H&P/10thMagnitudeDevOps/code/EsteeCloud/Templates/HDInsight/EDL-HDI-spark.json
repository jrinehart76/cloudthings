{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clustertype": {
      "type": "string",
      "defaultValue": "hadoop",
      "allowedValues": [
        "hadoop",
        "spark"
      ],
      "metadata": {
        "description": "hadoop or spark.  kafka is a separate ARM template. This template does NOT require ADLS."
      }
    },
    "clusterLoginUserName": {
      "type": "string",
      "defaultValue": "hdiadmin",
      "metadata": {
        "description": "This is the Ambari login."
      }
    },
    "clusterLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "This is the Ambari password."
      }
    },
    "sshUser": {
      "type": "string",
      "defaultValue": "sshuser",
      "metadata": {
        "description": "This is the ssh acct to the headnode."
      }
    },
    "sshPassword": {
      "type": "securestring",
      "metadata": {
        "description": "This is the ssh password."
      }
    },
    "clusterVersion": {
      "type": "string",
      "defaultValue": "3.6",
      "metadata": {
        "description": "HDInsight cluster version."
      }
    },
    "headNodeVMSize": {
      "type": "string",
      "defaultValue": "Standard_D3_v2",
      "metadata": {
        "description": "Size of the head nodes (there are 2)"
      }
    },
    "workerNodeVMSize": {
      "type": "string",
      "defaultValue": "Standard_D3_v2",
      "metadata": {
        "description": "Size of the worker nodes"
      }
    },
    "workerNodeInstanceCount": {
      "type": "int",
      "defaultValue": 4,
      "metadata": {
        "description": "Number of worker nodes (should have at least 3)"
      }
    },
    "existingVnetRG": {
      "type": "string",
      "defaultValue": "testvnet03",
      "metadata": {
        "description": "Resource Group of the existing Virtual Network"
      }
    },
    "existingVnet": {
      "type": "string",
      "defaultValue": "testvnet03",
      "metadata": {
        "description": "Name of the existing Virtual Network"
      }
    },
    "existingSubnet": {
      "type": "string",
      "defaultValue": "hdi-base",
      "metadata": {
        "description": "Name of the subnet within the existing Virtual Network"
      }
    },
    "datalakeStorageRG": {
      "type": "string",
      "defaultValue": "test-storage",
      "metadata": {
        "description": "Resource group of the datalake storage account"
      }
    },
    "asaStorageRG": {
      "type": "string",
      "defaultValue": "test-storage",
      "metadata": {
        "description": "Resource group of the ASA storage account"
      }
    },
    "filesStorageRG": {
      "type": "string",
      "defaultValue": "test-storage",
      "metadata": {
        "description": "Resource group of the files storage account"
      }
    },
    "locationAbv": {
      "type": "string",
      "defaultValue": "eus",
      "metadata": {
        "description": "The shorter version of the deployment region. E.G. uksouth, seasia"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "The Azure region for this deployment"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "Dev",
      "metadata": {
        "description": "The abbreviated environment label"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "AM",
      "metadata": {
        "description": "The abbreviated Azure Region code"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "baseNamingPrefix": "[concat(parameters('environment'), '-', parameters('region'), '-',  variables('location'), '-', parameters('application'))]",
    "clusterType": "[parameters('clustertype')]",
    "clusterName": "[tolower(concat('hdis', variables('baseNamingPrefix')))]",
    "containername": "[tolower(concat('container-', variables('clusterName')))]",
    "sshUser": "[parameters('sshUser')]",
    "sshPassword": "[parameters('sshPassword')]",
    "clusterLoginUserName": "[parameters('clusterLoginUserName')]",
    "clusterLoginPassword": "[parameters('clusterLoginPassword')]",
    "tenantId": "[subscription().subscriptionId]",
    "vNetId": "[concat('/subscriptions/', variables('tenantId'), '/resourceGroups/', parameters('existingVnetRG'), '/providers/Microsoft.Network/virtualNetworks/' , parameters('existingVnet'))]",
    "vNetSubnet": "[concat(variables('vNetId'), '/subnets/', parameters('existingSubnet'))]",
    "datalakeStorage": "[tolower(concat('sa', parameters('region'), parameters('locationAbv'), parameters('environment'), parameters('application'), 'dl', '01'))]",
    "asaStorage": "[tolower(concat('sa', parameters('region'), parameters('locationAbv'), parameters('environment'), parameters('application'), 'asa', '01'))]",
    "filesStorage": "[tolower(concat('sa', parameters('region'), parameters('locationAbv'), parameters('environment'), parameters('application'), 'files', '01'))]",
    "edlnaStorageResourceID": "[resourceId(parameters('datalakeStorageRG'),'Microsoft.Storage/storageAccounts', variables('datalakeStorage'))]",
    "asaResourceID": "[resourceId(parameters('asaStorageRG'),'Microsoft.Storage/storageAccounts', variables('asaStorage'))]",
    "filesResourceID": "[resourceId(parameters('filesStorageRG'),'Microsoft.Storage/storageAccounts', variables('filesStorage'))]"

  },
  "resources": [
    {
      "apiVersion": "2015-03-01-preview",
      "name": "[variables('clusterName')]",
      "type": "Microsoft.HDInsight/clusters",
      "location": "[variables('location')]",
      "dependsOn": [
      ],
      "properties": {
        "clusterVersion": "[parameters('clusterVersion')]",
        "osType": "Linux",
        "tier": "standard",
        "clusterDefinition": {
          "kind": "[variables('clusterType')]",
          "configurations": {
            "gateway": {
              "restAuthCredential.isEnabled": true,
              "restAuthCredential.username": "[variables('clusterLoginUserName')]",
              "restAuthCredential.password": "[variables('clusterLoginPassword')]"
            }
          }
        },
        "storageProfile": {
          "storageaccounts": [
            {
              "name": "[concat(variables('datalakeStorage') , '.blob.core.windows.net')]",
              "isDefault": true,
              "container": "[variables('containername')]",
              "key": "[listKeys(variables('edlnaStorageResourceID'), '2018-03-01-preview').keys[0].value]"
            },
            {
              "name": "[concat(variables('asaStorage') , '.blob.core.windows.net')]",
              "isDefault": false,
              "container": "[variables('containername')]",
              "key": "[listKeys(variables('asaResourceID'), '2018-03-01-preview').keys[0].value]"
            },
            {
              "name": "[concat(variables('filesStorage') , '.blob.core.windows.net')]",
              "isDefault": false,
              "container": "[variables('containername')]",
              "key": "[listKeys(variables('filesResourceID'), '2018-03-01-preview').keys[0].value]"
            }
          ]
        },
        "computeProfile": {
          "roles": [
            {
              "name": "headnode",
              "targetInstanceCount": "2",
              "hardwareProfile": {
                "vmSize": "[parameters('headNodeVMSize')]"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "[variables('sshUser')]",
                  "password": "[variables('sshPassword')]"
                }
              },
              "virtualNetworkProfile": {
                "id": "[variables('vNetId')]",
                "subnet": "[variables('vNetSubnet')]"
              },
              "scriptActions": []
            },
            {
              "name": "workernode",
              "targetInstanceCount": "[parameters('workerNodeInstanceCount')]",
              "hardwareProfile": {
                "vmSize": "[parameters('workernodeVMSize')]"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "[variables('sshUser')]",
                  "password": "[variables('sshPassword')]"
                }
              },
              "virtualNetworkProfile": {
                "id": "[variables('vNetId')]",
                "subnet": "[variables('vNetSubnet')]"
              },
              "scriptActions": []
            }
          ]
        }
      }
    }
  ]
}
