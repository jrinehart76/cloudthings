{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "0.9.0.0",
  "parameters": {
    "clusterLoginUserName": {
      "type": "string",
      "defaultValue": "hdiadmin",
      "metadata": {
        "description": "hdi cluster login name."
      }
    },
    "clusterLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "This is the Ambari password."
      }
    },
    "sshUser": {
      "type": "string",
      "defaultValue": "sshuser",
      "metadata": {
        "description": "This is the ssh acct to the headnode."
      }
    },
    "sshPassword": {
      "type": "securestring",
      "metadata": {
        "description": "This is the ssh password."
      }
    },
    "clusterVersion": {
      "type": "string",
      "defaultValue": "3.6",
      "metadata": {
        "description": "HDInsight cluster version."
      }
    },
    "componentVersion": {
      "type": "string",
      "defaultValue": "1.1",
      "metadata": {
        "description": "kafka component version."
      }
    },
    "headNodeVMSize": {
      "type": "string",
      "defaultValue": "Standard_D3_v2",
      "metadata": {
        "description": "Size of the head nodes (there are 2)"
      }
    },
    "zookeepernodesize": {
      "type": "string",
      "defaultValue": "Standard_D3_V2",
      "metadata": {
        "description": "zookeeper node size"
      }
    },
    "workerNodeVMSize": {
      "type": "string",
      "defaultValue": "Standard_D3_v2",
      "metadata": {
        "description": "Size of the worker nodes"
      }
    },
    "headNodeInstanceCount": {
      "type": "int",
      "defaultValue": 4,
      "metadata": {
        "description": "Number of zookeeper nodes"
      }
    },
    "zookeeperNodeInstanceCount": {
      "type": "int",
      "defaultValue": 4,
      "metadata": {
        "description": "Number of head nodes"
      }
    },
    "workerNodeInstanceCount": {
      "type": "int",
      "defaultValue": 4,
      "metadata": {
        "description": "Number of worker nodes (should have at least 3)"
      }
    },
    "existingVnetRG": {
      "type": "string",
      "defaultValue": "test-vnet02",
      "metadata": {
        "description": "Resource Group of the existing Virtual Network"
      }
    },
    "existingVnet": {
      "type": "string",
      "defaultValue": "test-vnet02",
      "metadata": {
        "description": "Name of the existing Virtual Network"
      }
    },
    "existingSubnet": {
      "type": "string",
      "defaultValue": "hdi-kafka",
      "metadata": {
        "description": "Name of the subnet within the existing Virtual Network"
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Standard_ZRS",
        "Premium_LRS"
      ],
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "The sku of the of the storage account"
      }
    },
    "kind": {
      "type": "string",
      "allowedValues": [
        "StorageV2"
      ],
      "defaultValue": "StorageV2",
      "metadata": {
        "description": "The kind of storage account to provision. StorageV2 has the latest API set"
      }
    },
    "uniqueChars": {
      "type": "string",
      "defaultValue": "ab",
      "metadata": {
        "description": "two char string added to the first 6 characters of hdi cluster naming for uniqueness within a vnet"
      }
    },
    "locationAbv": {
      "type": "string",
      "defaultValue": "eus",
      "metadata": {
        "description": "The shorter version of the deployment region. E.G. uksouth, seasia"
      }
    },
    "environment": {
      "type": "string",
      "metadata": {
        "description": "The abbreviated environment label"
      }
    },
    "application": {
      "type": "string",
      "metadata": {
        "description": "The application name"
      }
    },
    "applicationAbv": {
      "type": "string",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "AM",
      "metadata": {
        "description": "The abbreviated Azure Region code"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "baseNamingPrefix": "[concat(parameters('environment'), '-', parameters('region'), '-',  variables('location'), '-', parameters('application'))]",
    "clusterType": "kafka",
    "clusterName": "[tolower(concat('hdik', parameters('uniqueChars'), variables('baseNamingPrefix')))]",
    "storageacctname": "[tolower(concat('sa', parameters('region'), parameters('locationAbv'), parameters('environment'), parameters('applicationAbv'), 'kafka01'))]",
    "containername": "[tolower(concat('container-', variables('clusterName')))]",
    "storagekey": "[concat('Microsoft.Storage/storageAccounts/', variables('storageacctname'))]",
    "sshUser": "[parameters('sshUser')]",
    "sshPassword": "[parameters('sshPassword')]",
    "clusterLoginUserName": "[parameters('clusterLoginUserName')]",
    "clusterLoginPassword": "[parameters('clusterLoginPassword')]",
    "tenantId": "[subscription().subscriptionId]",
    "vNetId": "[concat('/subscriptions/', variables('tenantId'), '/resourceGroups/', parameters('existingVnetRG'), '/providers/Microsoft.Network/virtualNetworks/' , parameters('existingVnet'))]",
    "vNetSubnet": "[concat(variables('vNetId'), '/subnets/', parameters('existingSubnet'))]"
  },
  "resources": [
    {
      "apiVersion": "2015-03-01-preview",
      "name": "[variables('clusterName')]",
      "type": "Microsoft.HDInsight/clusters",
      "location": "[variables('location')]",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/',variables('storageacctname'))]"
      ],
      "properties": {
        "clusterVersion": "[parameters('clusterVersion')]",
        "osType": "Linux",
        "tier": "standard",
        "clusterDefinition": {
          "kind": "[variables('clusterType')]",
          "componentVersion": {
            "Kafka": "[parameters('componentVersion')]"
          },
          "configurations": {
            "gateway": {
              "restAuthCredential.isEnabled": true,
              "restAuthCredential.username": "[variables('clusterLoginUserName')]",
              "restAuthCredential.password": "[variables('clusterLoginPassword')]"
            }
          }
        },
        "storageProfile": {
          "storageaccounts": [
            {
              "name": "[concat(variables('storageacctname') , '.blob.core.windows.net')]",
              "isDefault": true,
              "container": "[variables('containername')]",
              "key": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageacctname')), '2015-05-01-preview').key1]"
            }
          ]
        },
        "computeProfile": {
          "roles": [
            {
              "name": "headnode",
              "minInstanceCount": 1,
              "targetInstanceCount": "[parameters('headNodeInstanceCount')]",
              "hardwareProfile": {
                "vmSize": "[parameters('headNodeVMSize')]"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "[variables('sshUser')]",
                  "password": "[variables('sshPassword')]"
                }
              },
              "virtualNetworkProfile": {
                "id": "[variables('vNetId')]",
                "subnet": "[variables('vNetSubnet')]"
              },
              "scriptActions": []
            },
            {
              "name": "workernode",
              "minInstanceCount": 1,
              "targetInstanceCount": "[parameters('workerNodeInstanceCount')]",
              "hardwareProfile": {
                "vmSize": "[parameters('workerNodeVMSize')]"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "[variables('sshUser')]",
                  "password": "[variables('sshPassword')]"
                }
              },
              "virtualNetworkProfile": {
                "id": "[variables('vNetId')]",
                "subnet": "[variables('vNetSubnet')]"
              },
              "scriptActions": [],
              "dataDisksGroups": [
                {
                  "disksPerNode": 1
                }
              ]
            },
            {
              "name": "zookeepernode",
              "minInstanceCount": 1,
              "targetInstanceCount": "[parameters('zookeeperNodeInstanceCount')]",
              "hardwareProfile": {
                "vmSize": "[parameters('zookeepernodesize')]"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "[variables('sshUser')]",
                  "password": "[variables('sshPassword')]"
                }
              },
              "virtualNetworkProfile": {
                "id": "[variables('vNetId')]",
                "subnet": "[variables('vNetSubnet')]"
              },
              "scriptActions": []
            }
          ]
        }
      },
      "resources": [
  
      ]
    },
    {
      "name": "[variables('storageacctname')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2018-03-01-preview",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "[parameters('kind')]",
      "location": "[variables('location')]",
      "properties": {}
    }
  ]
}