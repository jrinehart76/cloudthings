{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "skuName": {
      "type": "string",
      "defaultValue": "Premium",
      "metadata": {
        "description": "Tier of Redis Cache - Premium required for VNet Join"
      },
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "skuFamily": {
      "type": "string",
      "defaultValue": "P",
      "metadata": {
        "description": "Standard / Basic is C, Premium is P"
      },
      "allowedValues": [
        "C",
        "P"
      ]
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Scale of cache sizes. P: 1-4, C: 0-6"
      },
      "allowedValues": [
        0,
        1,
        2,
        3,
        4,
        5,
        6
      ]
    },
    "existingVnet": {
      "type": "string",
      "defaultValue": "test-vnet02",
      "metadata": {
        "description": "Name of the existing Virtual Network"
      }
    },
    "existingVnetRG": {
      "type": "string",
      "defaultValue": "test-vnet02",
      "metadata": {
        "description": "Resource Group of the existing Virtual Network"
      }
    },
    "existingSubnet": {
      "type": "string",
      "defaultValue": "redis",
      "metadata": {
        "description": "Name of the subnet within the existing Virtual Network that CosmosDB will be deployed to"
      }
    },
    "enableNonSslPort": {
      "type": "string",
      "defaultValue": "false",
      "metadata": {
        "description": "Enable Non SSL Port - true::enabled false::disabled"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "metadata": {
        "description": "Storage account for Redis DB backup"
      },
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "staticIP": {
      "type": "string",
      "defaultValue": "15.15.4.10",
      "metadata": {
        "description": "Internal IP to be assigned to Redis within the existing subnet"
      }
    },
    "locationAbv": {
      "type": "string",
      "defaultValue": "eus",
      "metadata": {
        "description": "The shorter version of the deployment region. E.G. uksouth, seasia"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "The Azure region for this deployment"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "Dev",
      "metadata": {
        "description": "The abbreviated environment label"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "AM",
      "metadata": {
        "description": "The abbreviated Azure Region code"
      }
    },
    "settingName": {
      "type": "string",
      "defaultValue": "logAnalyticsService",
      "metadata": {
        "description": "Name of the setting. Name for the diagnostic setting resource. Eg. 'archiveToStorage' or 'forSecurityTeam'."
      }
    },
    "workspaceName": {
      "type": "string",
      "allowedValues": [
        "la-am-eastus-NonProd-PaaS",
        "la-am-eastus-prod-paas",
        "la-ap-southeastasia-nonprod-v2",
        "la-ap-southeastasia-prod-v2",
        "la-eu-uksouth-nonprod-v2",
        "la-eu-uksouth-prod-v2",
        "la-am-eastus-devopspoc",
        "la-am-eastus-NonProd-CEPLATAM",
        "aa-cn-chinaeast2-nonprod",
        "aa-cn-chinaeast2-prod",
        "la-prod-learn",
        "la-prod-cornerstone"


      ],
      "metadata": {
        "description": "Log Analytics workspace ID for the Log Analytics workspace to which logs will be sent."
      }
    },
    "laResourceGroup": {
      "type": "string",
      "defaultValue": "RG-AM-EastUS-DevOpsPOC-Mgmt",
      "allowedValues": [
        "RG-AM-EastUS-MYELX-Mgmt",
        "RG-AM-EastUS-NonProd-PaaS-Mgmt",
        "RG-AM-EastUS-Prod-PaaS-Mgmt",
        "RG-AP-SoutheastAsia-NONPROD-V2-Mgmt",
        "RG-AP-SoutheastAsia-Prod-V2-MGMT",
        "RG-EU-UKSouth-NonProd-V2-MGMT",
        "RG-EU-UKSouth-Prod-V2-MGMT",
        "RG-AM-EastUS-DevOpsPOC-Mgmt",
        "RG-AM-EastUS-NonProd-CEPLATAM-Mgmt",
        "RG-CN-ChinaEast2-NonProd-Mgmt",
        "RG-CN-ChinaEast2-Prod-Mgmt",
        "RG-PROD-LEARN-MGMT",
        "rg-prod-cornerstone-mgmt"
      ],
      "metadata": {
        "description": "The Resource Group where the Log Analytics workspace resides to which logs will be sent."
      }
    },
    "accessTier": {
      "type": "string",
      "defaultValue": "Hot",
      "metadata": {
        "description": "Cool or Hot storage"
      },
      "allowedValues": [
        "Hot",
        "Cool"
      ]
    },
    "supportsHttpsTrafficOnly": {
      "type": "bool",
      "defaultValue": true
    },
    "DatalakeEnabled": {
      "type": "bool",
      "defaultValue": true
    },
    "sharedServiceSubnetResourceID": {
      "type": "string",
      "defaultValue": "/subscriptions/8a00b99b-04e8-474d-a318-397385dc07a4/resourceGroups/RG-AM-EastUS-Prod-SS/providers/Microsoft.Network/virtualNetworks/VNET-AM-EastUS-Prod-SS/subnets/Subnet-AM-EastUS-Prod-SS-PANUnTrust",
      "metadata": {
        "description": "Range of allowed IPs to access cosmosdb"
      }
    }
  },
  "variables": {
    "baseNamingPrefix": "[concat(parameters('region'), '-',  parameters('location'), '-', parameters('environment'), '-', parameters('application'))]",
    "redisCacheName": "[concat('Redis-', variables('baseNamingPrefix'))]",
    "storageAccountName": "[tolower(concat('sa', parameters('region'), parameters('locationAbv'), parameters('environment'), parameters('application'), 'redis'))]",
    "subnetId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('existingVNetRG'), '/providers/Microsoft.Network/virtualNetworks/', parameters('existingVNet'), '/subnets/', parameters('existingSubnet'))]",
    "listKeys": "[concat('/subscriptions/',subscription().subscriptionid,'/resourceGroups/',resourcegroup().name,'/providers/Microsoft.Storage/storageAccounts/',variables('storageAccountName'))]",
    "workspaceId": "[resourceId(parameters('laResourceGroup'), 'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
  },

  "resources": [
    {
      "apiVersion": "2018-07-01",
      "dependsOn": [],
      "kind": "StorageV2",
      "location": "[parameters('location')]",
      "name": "[variables('storageAccountName')]",
      "properties": {
        "accessTier": "[parameters('accessTier')]",
        "isHnsEnabled": "[parameters('DatalakeEnabled')]",
        "supportsHttpsTrafficOnly": "[parameters('supportsHttpsTrafficOnly')]",
        "networkAcls": {
          "bypass": "None",
          "virtualNetworkRules": [
            {
              "id": "[parameters('sharedServiceSubnetResourceID')]",
              "action": "Allow"
            }
          ],
          "defaultAction": "Deny"
        }
      },
      "sku": {
        "name": "Standard_LRS"
      },
      "type": "Microsoft.Storage/storageAccounts"
    },
    {
      "apiVersion": "2017-10-01",
      "type": "Microsoft.Cache/Redis",
      "name": "[variables('redisCacheName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[variables('storageAccountName')]"
      ],
      "properties": {
        "sku": {
          "name": "[parameters('skuName')]",
          "family": "[parameters('skuFamily')]",
          "capacity": "[parameters('skuCapacity')]"
        },
        "redisConfiguration": {
          "rdb-storage-connection-string": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';BlobEndpoint=https://',variables('storageAccountName'),'.blob.core.chinacloudapi.cn/;AccountKey=', listKeys(variables('listKeys'), '2015-06-15').key1)]",
          "rdb-backup-enabled": "true",
          "rdb-backup-frequency": "60",
          "rdb-backup-max-snapshot-count": "1"
        },
        "enableNonSslPort": "[parameters('enableNonSslPort')]",
        "subnetid": "[variables('subnetId')]",
        "staticIP": "[parameters('staticIP')]"
      }
    }
  ]
}