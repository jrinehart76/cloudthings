{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "FirstRuleDescription": {
      "type": "string",
      "defaultValue": "Example: This is to allow developer access to the <VMName>",
      "metadata": {
        "description": "A decription of the NSG Rule"
      }
    },
    "Protocol": {
      "type": "string",
      "allowedValues": [
        "Tcp",
        "Udp"
      ],
      "defaultValue": "Tcp",
      "metadata": {
        "description": "Azure Region"
      }
    },
    "SourcePortRange": {
      "type": "string",
      "defaultValue": "*",
      "metadata": {
        "description": "Format: Asterisk for all ports or 22-35"
      }
    },
    "DestPortRange": {
      "type": "string",
      "defaultValue": "*",
      "metadata": {
        "description": "Format: Asterisk for all ports or 22-35"
      }
    },
    "sourceAddressPrefix": {
      "type": "string",
      "defaultValue": "0.0.0.0/24",
      "metadata": {
        "description": "The source tag or IP Address/IP Address Range"
      }
    },
    "destinationAddressPrefix": {
      "type": "string",
      "defaultValue": "0.0.0.0/24",
      "metadata": {
        "description": "The destination tag or IP Address/IP Address Range"
      }
    },
    "direction": {
      "type": "string",
      "allowedValues": [
        "Inbound",
        "Outbound"
      ],
      "defaultValue": "Inbound",
      "metadata": {
        "description": "Inbound or Outbound communication"
      }
    },
    "priority": {
      "type": "string",
      "defaultValue": "100",
      "metadata": {
        "description": "The priority number"
      }
    },
    "access": {
      "type": "string",
      "allowedValues": [
        "Allow",
        "Deny"
      ],
      "defaultValue": "Allow",
      "metadata": {
        "description": "Allow or Deny"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "The Azure region for this deployment"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "Dev",
      "metadata": {
        "description": "The abbreviated environment label"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "AM",
      "metadata": {
        "description": "The abbreviated Azure Region code"
      }
    }
  },
  "variables": {
    "baseNamingPrefix": "[concat(parameters('region'), '-',  parameters('location'), '-', parameters('environment'), '-', parameters('application'))]",
    "nsgName": "[concat('NSG-', variables('baseNamingPrefix'))]"

  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('nsgName')]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "developer_access",
            "properties": {
              "description": "[parameters('FirstRuleDescription')]",
              "protocol": "[parameters('Protocol')]",
              "sourcePortRange": "[parameters('SourcePortRange')]",
              "destinationPortRange": "[parameters('DestPortRange')]",
              "sourceAddressPrefix": "[parameters('sourceAddressPrefix')]",
              "destinationAddressPrefix": "[parameters('destinationAddressPrefix')]",
              "access": "[parameters('access')]",
              "priority": "[parameters('priority')]",
              "direction": "[parameters('direction')]"
            }
          }
        ]
      }
    }
  ]
}