{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "eastus2",
      "metadata": {
        "description": "The Azure Region where the resource will be deployed"
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Standard_ZRS",
        "Premium_LRS"
      ],
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "The sku of the of the storage account"
      }
    },
    "kind": {
      "type": "string",
      "allowedValues": [
        "StorageV2",
        "BlobStorage"
      ],
      "defaultValue": "StorageV2",
      "metadata": {
        "description": "The kind of storage account to provision. StorageV2 has the latest API set"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "am",
      "metadata": {
        "description": "The region code for the resource(s)"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "The environment code for the resource(s)"
      }
    },
    "use": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "The environment code for the resource(s)"
      }
    },
    "locationAbv": {
      "type": "string",
      "defaultValue": "eus",
      "metadata": {
        "description": "The shorter version of the deployment region. E.G. uks, seas"
      }
    },
    "numberOfInstances": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The number of instances per plan"
      }
    },
    "application": {
      "type": "string",
      "metadata": {
        "description": "The name of the resource(s), e.g. elasticsearch, subnet"
      }
    },
    "sharedServiceSubnetResourceID": {
      "type": "string",
      "defaultValue": "/subscriptions/8a00b99b-04e8-474d-a318-397385dc07a4/resourceGroups/RG-AM-EastUS-Prod-SS/providers/Microsoft.Network/virtualNetworks/VNET-AM-EastUS-Prod-SS/subnets/Subnet-AM-EastUS-Prod-SS-PANUnTrust",
      "metadata": {
        "description": "Range of allowed IPs to access cosmosdb"
      }
    },
    "accessTier": {
      "type": "string",
      "defaultValue": "Hot",
      "metadata": {
        "description": "Cool or Hot storage"
      },
      "allowedValues": [
        "Hot",
        "Cool"
      ]
    },
    "supportsHttpsTrafficOnly": {
      "type": "bool",
      "defaultValue": true
    },
    "DatalakeEnabled": {
      "type": "bool",
      "defaultValue": true
    }
  },
  "variables": {
    "storageAccountName": "[tolower(concat('sa', parameters('region'), parameters('locationAbv'), parameters('environment'), parameters('application'), parameters('use')))]"
  },
  "resources": [
    {
      "apiVersion": "2018-07-01",
      "dependsOn": [],
      "kind": "[parameters('kind')]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "stCopy",
        "count": "[parameters('numberOfInstances')]"
      },
      "name": "[concat(variables('storageAccountName'), '0', copyIndex(1))]",
      "properties": {
        "accessTier": "[parameters('accessTier')]",
        "isHnsEnabled": "[parameters('DatalakeEnabled')]",
        "supportsHttpsTrafficOnly": "[parameters('supportsHttpsTrafficOnly')]",
        "networkAcls": {
          "bypass": "None",
          "virtualNetworkRules": [
            {
              "id": "[parameters('sharedServiceSubnetResourceID')]",
              "action": "Allow"
            }
          ],
          "defaultAction": "Deny"
        }
      },
      "sku": {
        "name": "[parameters('sku')]"
      },
      "type": "Microsoft.Storage/storageAccounts"
    }
  ]
}