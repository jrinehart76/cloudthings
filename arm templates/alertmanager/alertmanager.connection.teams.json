{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "logicAppLocation": {
        "type": "string",
        "metadata": {
          "description": "Location of the Logic App."
        }
      },
      "teamsConnectionName": {
        "type": "string",
        "metadata": {
          "description": "Name of the Microsoft Teams connection"
        }
      }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Web/connections",
        "apiVersion": "2016-06-01",
        "location": "[parameters('logicAppLocation')]",
        "name": "[parameters('teamsConnectionName')]",
        "properties": {
          "api": {
            "id": "[concat(subscription().id,'/providers/Microsoft.Web/locations/', parameters('logicAppLocation'), '/managedApis/teams')]"
          },
          "displayName": "[parameters('teamsConnectionName')]"
        }
      }
    ],
    "outputs": {}
}