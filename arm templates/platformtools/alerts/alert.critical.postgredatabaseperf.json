{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceLocation": {
            "type": "string"
        },
        "workspaceResourceId": {
            "type": "string"
        },
        "actionGroupId": {
            "type": "string"
        },
        "customerId": {
            "type": "string"
        },
        "version": {
            "type": "string"
        }
    },
    "variables": {
        "hiddenLinkTag": "[json( concat( '{\"hidden-link:', parameters('workspaceResourceId'), '\": \"Resource\"}' ) )]",
        "alertCopy": {
            "critAlertDetails": [
                {
                    "alertName": "10m-postgresql-critical-cpu",
                    "alertDescription": "[concat('Critical CPU PostGRESQL. ', parameters('version'))]",
                    "query": "//critical cpu usage on postgresql\r\n AzureMetrics\r\n | where ResourceProvider has 'dbforpostgresql' and MetricName has 'cpu_percent'\r\n | project Computer=Resource, ResourceGroup, Average\r\n | summarize [\"Average % CPU\"]=percentiles(Average, 90) by Computer, ResourceGroup\r\n | where [\"Average % CPU\"] >= 98",
                    "frequencyInMinutes": 15,
                    "timeWindowInMinutes": 30,
                    "emailSubject": "[concat(parameters('customerId'),'-Critical-CPU-PostGRESQL')]",
                    "thresholdOperator": "GreaterThan",
                    "threshold": 0,
                    "severity": 3
                },
                {
                    "alertName": "10m-postgresql-critical-mem",
                    "alertDescription": "[concat('Critical Memory PostGRESQL. ', parameters('version'))]",
                    "query": "//critical memory usage on postgresql\r\n AzureMetrics\r\n | where ResourceProvider has 'dbforpostgresql' and MetricName has 'memory_percent'\r\n | project Computer=Resource, ResourceGroup, Average\r\n | summarize [\"Average % Memory\"]=percentiles(Average, 90) by Computer, ResourceGroup\r\n | where [\"Average % Memory\"] >= 95",
                    "frequencyInMinutes": 15,
                    "timeWindowInMinutes": 30,
                    "emailSubject": "[concat(parameters('customerId'),'-Critical-Memory-PostGRESQL')]",
                    "thresholdOperator": "GreaterThan",
                    "threshold": 0,
                    "severity": 3
                }
            ]
        }
    },
    "resources": [
        {
            "type": "Microsoft.Insights/scheduledQueryRules",
            "name": "[variables('alertCopy').critAlertDetails[copyIndex()].alertName]",
            "apiVersion": "2018-04-16",
            "location": "[parameters( 'workspaceLocation' )]",
            "tags": "[variables('hiddenLinkTag')]",
            "copy": {
                "count": "[length(variables('alertCopy').critAlertDetails)]",
                "name": "alertCopy"
            },
            "properties": {
                "description": "[variables('alertCopy').critAlertDetails[copyIndex()].alertDescription]",
                "enabled": "true",
                "source": {
                    "query": "[variables('alertCopy').critAlertDetails[copyIndex()].query]",
                    "dataSourceId": "[parameters('workspaceResourceId')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": "[variables('alertCopy').critAlertDetails[copyIndex()].frequencyInMinutes]",
                    "timeWindowInMinutes": "[variables('alertCopy').critAlertDetails[copyIndex()].timeWindowInMinutes]"
                },
                "action": {
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
                    "severity": "[variables('alertCopy').critAlertDetails[copyIndex()].severity]",
                    "throttlingInMin": 0,
                    "aznsAction": {
                        "actionGroup": [
                            "[parameters('actionGroupId')]"
                        ],
                        "emailSubject": "[variables('alertCopy').critAlertDetails[copyIndex()].emailSubject]"
                    },
                    "trigger": {
                        "thresholdOperator": "[variables('alertCopy').critAlertDetails[copyIndex()].thresholdOperator]",
                        "threshold": "[variables('alertCopy').critAlertDetails[copyIndex()].threshold]"
                    }
                }
            }
        }
    ]
}