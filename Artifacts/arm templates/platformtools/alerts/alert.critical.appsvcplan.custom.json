{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceLocation": {
            "type": "string"
        },
        "workspaceResourceId": {
            "type": "string"
        },
        "actionGroupId": {
            "type": "string"
        },
        "customerId": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "planName": {
            "type": "string"
        }
    },
    "variables": {
        "hiddenLinkTag": "[json( concat( '{\"hidden-link:', parameters('workspaceResourceId'), '\": \"Resource\"}' ) )]",
        "alertCopy": {
            "critAlertDetails": [
                {
                    "alertName": "[concat('10m-', parameters('planName') ,'-critical-cpu')]",
                    "alertDescription": "[concat('Critical CPU Application Service Plan. ', parameters('version'))]",
                    "query": "[concat('AzureMetrics | where TimeGenerated > now(-10m) | where ResourceProvider has \"microsoft.web\" and MetricName has \"cpupercentage\" | where Resource has \"', parameters('planName') ,'\" | summarize maxCPU=round(min_of(max(Maximum), 100.0)) by Computer=Resource | where maxCPU >= 90')]",
                    "frequencyInMinutes": 10,
                    "timeWindowInMinutes": 10,
                    "emailSubject": "[concat(parameters('customerId'),'-Critical-CPU-AppSVCPlan')]",
                    "thresholdOperator": "GreaterThan",
                    "threshold": 0,
                    "severity": 1
                },
                {
                    "alertName": "[concat('10m-', parameters('planName') ,'-critical-mem')]",
                    "alertDescription": "[concat('Critical Memory Application Service Plan. ', parameters('version'))]",
                    "query": "[concat('AzureMetrics | where TimeGenerated > now(-45m) | where ResourceProvider has \"microsoft.web\" and MetricName has \"memorypercentage\" | where Resource has \"', parameters('planName') ,'\" | summarize maxMem=round(min_of(max(Maximum), 100.0)) by Computer=Resource | where maxMem >= 90')]",
                    "frequencyInMinutes": 45,
                    "timeWindowInMinutes": 45,
                    "emailSubject": "[concat(parameters('customerId'),'-Critical-Memory-AppSVCPlan')]",
                    "thresholdOperator": "GreaterThan",
                    "threshold": 0,
                    "severity": 1
                }
            ]
        }
    },
    "resources": [
        {
            "type": "Microsoft.Insights/scheduledQueryRules",
            "name": "[variables('alertCopy').critAlertDetails[copyIndex()].alertName]",
            "apiVersion": "2018-04-16",
            "location": "[parameters( 'workspaceLocation' )]",
            "tags": "[variables('hiddenLinkTag')]",
            "copy": {
                "count": "[length(variables('alertCopy').critAlertDetails)]",
                "name": "alertCopy"
            },
            "properties": {
                "description": "[variables('alertCopy').critAlertDetails[copyIndex()].alertDescription]",
                "enabled": "true",
                "source": {
                    "query": "[variables('alertCopy').critAlertDetails[copyIndex()].query]",
                    "dataSourceId": "[parameters('workspaceResourceId')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": "[variables('alertCopy').critAlertDetails[copyIndex()].frequencyInMinutes]",
                    "timeWindowInMinutes": "[variables('alertCopy').critAlertDetails[copyIndex()].timeWindowInMinutes]"
                },
                "action": {
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
                    "severity": "[variables('alertCopy').critAlertDetails[copyIndex()].severity]",
                    "throttlingInMin": 0,
                    "aznsAction": {
                        "actionGroup": [
                            "[parameters('actionGroupId')]"
                        ],
                        "emailSubject": "[variables('alertCopy').critAlertDetails[copyIndex()].emailSubject]"
                    },
                    "trigger": {
                        "thresholdOperator": "[variables('alertCopy').critAlertDetails[copyIndex()].thresholdOperator]",
                        "threshold": "[variables('alertCopy').critAlertDetails[copyIndex()].threshold]"
                    }
                }
            }
        }
    ]
}