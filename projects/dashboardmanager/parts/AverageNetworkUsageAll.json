                },
                {
                    "name": "Query",
                    "value": "//average network usage in GB\r\nPerf\r\n| where TimeGenerated > now(-1d) \r\n| where CounterName == \"Total Bytes\"\r\n| summarize avgNETinGB=avg(((CounterValue / 1024) / 1024) / 1024) by bin(TimeGenerated, 30m), Computer\r\n| render timechart\n"
                },
                {
                    "name": "Dimensions",
                    "value": {
                        "xAxis": {
