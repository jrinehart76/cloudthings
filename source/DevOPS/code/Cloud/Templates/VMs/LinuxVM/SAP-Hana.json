{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "existingMGMTRG": {
      "type": "string",
      "allowedValues": [
        "rg-am-eastus-nonprod-paas-mgmt",
        "rg-am-eastus-myelc-mgmt",
        "rg-am-eastus-bobbibrown-mgmt",
        "rg-am-eastus-devopspoc-mgmt",
        "rg-am-eastus-nonprod-ceplatam-mgmt",
        "rg-am-eastus-nonprod-cornerstone-mgmt",
        "rg-am-eastus-nonprod-datalake-mgmt",
        "rg-am-eastus-nonprod-e2e-mgmt",
        "rg-am-eastus-nonprod-O9-mgmt",
        "rg-am-eastus-nonprod-paas-mgmt",
        "rg-am-eastus-prod-ceplatam-mgmt",
        "rg-am-eastus-prod-edlna-mgmt",
        "rg-am-eastus-prod-O9-mgmt",
        "rg-am-eastus-prod-paas-mgmt",
        "rg-am-eastus-public-mgmt",
        "rg-am-eastus-sap-mgmt",
        "rg-ap-southeastasia-nonprod-DataLake-mgmt",
        "rg-ap-southeastasia-nonprod-v2-mgmt",
        "rg-ap-southeastasia-prod-DataLake-mgmt",
        "rg-ap-southeastasia-prod-v2-mgmt",
        "rg-eu-uksouth-nonprod-v2-mgmt",
        "rg-eu-uksouth-prod-v2-mgmt",
        "rg-nonprod-learn-mgmt",
        "rg-nonprod-sap-mgmt",
        "rg-prod-cornerstone-mgmt",
        "rg-prod-learn-mgmt",
        "rg-prod-sap-mgmt"
      ],
      "metadata": {
        "description": "Recovery services vault name where the VMs will be backed up to. "
      }
    },
    "existingRecoveryServicesVault": {
      "type": "string",
      "allowedValues": [
        "rsv-am-eastus-nonprod-paas",
        "rsv-am-EastUS-myelx",
        "rsv-am-EastUS-bobbibrown",
        "rsv-am-eastus-devopspoc",
        "rsv-am-eastus-nonprod-ceplatam",
        "rsv-am-eastus-nonprod-cornerstone",
        "rsv-am-eastus-NonProd-DataLake",
        "rsv-am-eastus-nonprod-e2e",
        "rsv-am-eastus-nonprod-o9",
        "rsv-am-eastus-nonprod-paas",
        "rsv-am-eastus-Prod-ceplatam",
        "rsv-am-eastus-prod-edlna",
        "rsv-am-eastus-prod-o9",
        "rsv-am-EastUS-prod-paas",
        "rsv-am-westus-prod-paas",
        "rsv-am-eastus-public",
        "rsv-am-eastus-sap",
        "rsv-ap-southeastasia-nonprod-datalake",
        "rsv-ap-koreacentral-nonprod-v2",
        "rsv-ap-southeastasia-nonprod-v2",
        "rsv-ap-southeastasia-prod-datalake",
        "rsv-ap-southeastasia-prod-v2",
        "rsv-eu-uksouth-nonprod-v2",
        "rsv-eu-uksouth-prod-v2",
        "rsv-am-eastus-nonprod-learn",
        "rsv-ap-southeastasia-nonprod-learn",
        "rsv-eastus-nonprod-sap",
        "rsv-eastus-prod-cornerstone",
        "rsv-eastus-prod-learn",
        "rsv-ap-southeastasia-prod-learn",
        "rsv-eu-uksouth-prod-sap",
        "rsv-test"
      ],
      "metadata": {
        "description": "Recovery services vault name where the VMs will be backed up to. "
      }
    },
    "VMResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "The VM image reference SKU"
      }
    },
    "existingBackupPolicy": {
      "type": "string",
      "defaultValue": "DefaultPolicy",
      "metadata": {
        "description": "Backup policy to be used to backup VMs. Backup Policy defines the schedule of the backup and how long to retain backup copies. By default every vault comes with a 'DefaultPolicy' which canbe used here."
      }
    },
    "virtualMachineNamePrefix": {
      "type": "string",
      "defaultValue": "US-AZR-PLAPP",
      "metadata": {
        "description": "Azure VM resource name"
      }
    },
    "virtualMachineComputerNamePrefix": {
      "type": "string",
      "defaultValue": "US-AZR-PLAPP",
      "metadata": {
        "description": "OS computer name"
      }
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_A4",
      "metadata": {
        "description": "The size of the virtual machine"
      }
    },
    "publisher": {
      "type": "string",
      "defaultValue": "Canonical",
      "metadata": {
        "description": "The VM image reference Publisher"
      }
    },
    "offer": {
      "type": "string",
      "defaultValue": "UbuntuServer",
      "metadata": {
        "description": "The VM image reference Offer"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "18.04-LTS",
      "metadata": {
        "description": "The VM image reference SKU"
      }
    },
    "version": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "The version of the VM image reference offer"
      }
    },
    "osDiskStorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "The type of storage for the OS Disk"
      }
    },
    "dataDisks": {
      "type": "array",
      "defaultValue": [
        {
          "lun": 0,
          "diskSizeGB": 32,
          "managedDisk": {
            "storageAccountType": "Standard_LRS"
          },
          "createOption": "empty",
          "caching": "None"
        }
      ],
      "metadata": {
        "description": "The data disk array"
      }
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "virtualNetworkRGName": {
      "type": "string",
      "defaultValue": "RG-AM-EastUS-DevOpsPOC-Mgmt",
      "metadata": {
        "description": "The name of the resource group that contians the vnet that the VM will be attached to"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "VNET-AM-EastUS-POC-10M",
      "metadata": {
        "description": "The virtual network to which the VM will be attached"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "The subnet to which the VM will be deployed"
      }
    },
    "availabilitySetName": {
      "type": "string",
      "defaultValue": "AS-AM-EastUS-POC-10M-LServer",
      "metadata": {
        "description": "The availability set that will house the VM"
      }
    },
    "availabilitySetUpdateDomainCount": {
      "type": "int",
      "defaultValue": 5,
      "metadata": {
        "description": "The number of update domains in the availability set"
      }
    },
    "availabilitySetFaultDomainCount": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "The number of fault domains in the availability set"
      }
    },
    "diagStorageAccountName": {
      "type": "string",
      "defaultValue": "savmdiagdwxiqj64pubhw",
      "metadata": {
        "description": "The name of the diagnostic storage account for the subscription. The sotrage account should begin with savmdiag-"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "The Azure region for this deployment"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "Dev",
      "metadata": {
        "description": "The abbreviated environment label"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "AM",
      "metadata": {
        "description": "The abbreviated Azure Region code"
      }
    },
    "numberOfInstances": {
      "type": "int"
    },
    "startNumber": {
      "type": "int"
    },
    "workspaceName": {
      "type": "string",
      "allowedValues": [
        "laws-am-eastus",
        "laws-ap-southeastasia",
        "laws-eu-uksouth",
        "la-am-eastus-devopspoc"
      ],
      "metadata": {
        "description": "Log Analytics workspace ID for the Log Analytics workspace to which logs will be sent."
      }
    },
    "laResourceGroup": {
      "type": "string",
      "allowedValues": [
        "rg-am-eastus",
        "rg-ap-southeastasia",
        "rg-eu-uksouth",
        "rg-am-eastus-devopspoc-mgmt"

      ],
      "metadata": {
        "description": "The Resource Group where the Log Analytics workspace resides to which logs will be sent."
      }
    }
  },
  "variables": {
    "vnetId": "[resourceId(parameters('virtualNetworkRGName'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2016-09-01",
      "name": "[concat('NIC-',parameters('virtualMachineNamePrefix'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/availabilitySets",
      "apiVersion": "2016-04-30-preview",
      "name": "[parameters('availabilitySetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "platformUpdateDomainCount": "[parameters('availabilitySetUpdateDomainCount')]",
        "platformFaultDomainCount": "[parameters('availabilitySetFaultDomainCount')]",
        "virtualMachines": []
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "name": "[concat(parameters('virtualMachineNamePrefix'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [
        "nicLoop",
        "[concat('Microsoft.Compute/availabilitySets/', parameters('availabilitySetName'))]"
      ],
      "properties": {
        "osProfile": {
          "computerName": "[concat(parameters('virtualMachineComputerNamePrefix'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('publisher')]",
            "offer": "[parameters('offer')]",
            "sku": "[parameters('sku')]",
            "version": "[parameters('version')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "name": "[concat('Disk-',parameters('virtualMachineNamePrefix'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-OS')]",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskStorageType')]"
            }
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[length(parameters('dataDisks'))]",
              "input": {
                "name": "[concat('Disk-',parameters('virtualMachineNamePrefix'),padLeft(copyIndex('virtualMachineLoop',parameters('startNumber')),2,'0'),'-Data-LUN',copyIndex('dataDisks'))]",
                "lun": "[parameters('dataDisks')[copyIndex('dataDisks')].lun]",
                "diskSizeGB": "[parameters('dataDisks')[copyIndex('dataDisks')].diskSizeGB]",
                "managedDisk": {
                  "storageAccountType": "[parameters('dataDisks')[copyIndex('dataDisks')].managedDisk.storageAccountType]"
                },
                "createOption": "[parameters('dataDisks')[copyIndex('dataDisks')].createOption]",
                "caching": "[parameters('dataDisks')[copyIndex('dataDisks')].caching]"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('NIC-',parameters('virtualMachineNamePrefix'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1'))]"
            }
          ]
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName'))]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('diagStorageAccountName'),'.blob.core.windows.net')]"
          }
        }
      },
      "resources": [
        {
          "type": "extensions",
          "name": "OMSExtension",
          "apiVersion": "2015-06-15",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]" 
          ],
          "properties": {
            "publisher": "Microsoft.EnterpriseCloud.Monitoring",
            "type": "OmsAgentForLinux",
            "typeHandlerVersion": "1.7",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "workspaceId": "[reference(resourceId('0ffde392-0ea6-4c28-b315-92e6417ab377', parameters('laResourceGroup'), 'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').customerId]"
            },
            "protectedSettings": {
              "workspaceKey": "[listKeys(resourceId('0ffde392-0ea6-4c28-b315-92e6417ab377', parameters('laResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').primarySharedKey]"
            }
          }
        }
      ]  
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('virtualMachineNamePrefix'),padLeft(copyIndex(parameters('startNumber')),2,'0'), '/DependencyAgent')]",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineNamePrefix'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Monitoring.DependencyAgent",
        "type": "DependencyAgentLinux",
        "typeHandlerVersion": "9.4",
        "autoUpgradeMinorVersion": true
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[concat('RecoveryServices', variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('existingMGMTRG')]",
      "dependsOn": ["virtualMachineLoop"],
      "copy": {
        "name": "BackupLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "properties": {
        "mode":"Incremental",
          "template": {
            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "resources": [
            {
              "name": "[concat(parameters('existingRecoveryServicesVault'), '/', 'Azure', '/', 'iaasvmcontainer;iaasvmcontainerv2;', parameters('VMResourceGroup'), ';', variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'), '/', 'vm;iaasvmcontainerv2;', parameters('VMResourceGroup'),';', variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
              "apiVersion": "2016-06-01",
              "location": "[resourceGroup().location]",
              "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
              "properties": {
                  "protectedItemType": "Microsoft.Compute/virtualMachines",
                  "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('existingRecoveryServicesVault'),parameters('existingBackupPolicy') )]",
                  "sourceResourceId": "[resourceId(subscription().subscriptionId,parameters('VMResourceGroup'),'Microsoft.Compute/virtualMachines', concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0')))]"
              }
            }
          ]
        }
      }
    }
  ],
  "outputs": {
  }
}