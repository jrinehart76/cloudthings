GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="$(sed 's, release .*$,,g' /etc/system-release)"
GRUB_DEFAULT=saved
GRUB_DISABLE_SUBMENU=true
GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="console=ttyS0 earlyprintk=ttyS0 rootdelay=300 transparent_hugepage=never intel_idle.max_cstate=1 processor.max_cstate=1 spectre_v2=off nopti"
GRUB_DISABLE_RECOVERY="true"
