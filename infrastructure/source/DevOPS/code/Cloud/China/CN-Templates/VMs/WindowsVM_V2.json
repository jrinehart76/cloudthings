{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_A4",
      "metadata": {
        "description": "The size of the virtual machine"
      }
    },
    "sharedImage": {
      "type": "string",
      "defaultValue": "SharedImage-AM-EastUS-SS-Ubuntu-1604",
      "allowedValues": [
      "SharedImage-CN-ChinaEast2-SS-CENTOS-75",
      "SharedImage-CN-ChinaEast2-SS-RHEL-76",
      "SharedImage-CN-ChinaEast2-SS-Ubuntu-1604",
      "SharedImage-CN-ChinaEast2-SS-Ubuntu-1804",
      "SharedImage-CN-ChinaEast2-WindowsServer-2012R2",
      "SharedImage-CN-ChinaEast2-WindowsServer-2016"
      ],
      "metadata": {
          "description": "The name of the shared image"
        }
      },
    "sharedImageVersion": {
      "type": "string",
      "defaultValue": "2019.11.26",
      "allowedValues": [
      "2019.11.26"      
      ],
      "metadata": {
          "description": "The version of the shared image"
        }
      },
      "osDiskSize":{
      "type":"int",
      "defaultValue": 128,
      "metadata": {
        "description":"Disk size of OS, in GB"
      }
    },
    "osDiskStorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "The storage type of the managed disks"
      }
    },
    "dataDisks": {
      "type": "array",
      "defaultValue": [
        {
          "lun": 0,
          "diskSizeGB": 32,
          "managedDisk": {
            "storageAccountType": "Standard_LRS"
          },
          "createOption": "empty",
          "caching": "None"
        }
      ],
      "metadata": {
        "description": "The data disk array"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "cloudadmin",
      "metadata": {
        "description": "The local admin username for the virtual machine"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The local admin password for the virtual machine"
      }
    },
    "virtualNetworkRGName": {
      "type": "string",
      "defaultValue": "rg-region1-DevOpsPOC-Mgmt",
      "metadata": {
        "description": "The name of the resource group that contians the vnet that the VM will be attached to"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "VNET-AM-EastUS-POC-MSP",
      "metadata": {
        "description": "The virtual network to which the VM will be attached"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "The subnet to which the VM will be deployed"
      }
    },
    "availabilitySetName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The availability set that will house the VM"
      }
    },
    "availabilitySetUpdateDomainCount": {
      "type": "int",
      "defaultValue": 5,
      "metadata": {
        "description": "The number of update domains in the availability set"
      }
    },
    "availabilitySetFaultDomainCount": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "The number of fault domains in the availability set"
      }
    },
    "diagStorageAccountName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The central management storage accoutn where VM diagnostics will be stored"
      }
    },
    "domainFQDNToJoin": {
      "type": "string",
      "defaultValue": "testdomain.com"
    },
    "ouPath": {
      "type": "string",
      "defaultValue": "test",
      "metadata": { "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com" }
    },
    "domainUser": {
      "type": "string",
      "defaultValue": "domainusername",
      "metadata": {
        "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com"

      }
    },
    "domainUserDomainFQDN": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": ""
      }
    },
    "domainPassword": {
      "type": "securestring",
      "defaultValue": "password1*",
      "metadata": {
        "description": ""
      }
    },
    "domainJoinOptions": {
      "type": "int",
      "defaultValue": 3,
      "metadata": { "description": "Set of bit flags that define the join options. Default value of 3 is a combination of NETSETUP_JOIN_DOMAIN (0x00000001) & NETSETUP_ACCT_CREATE (0x00000002) i.e. will join the domain and create the account on the domain. For more information see https://msdn.microsoft.com/en-us/library/aa392154(v=vs.85).aspx" }
    },
    "numberOfInstances": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The number of VM instances to be deployed"
      }
    },
    "startNumber": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The beginning number to be appended to the VM name"
      }
    },
    "environmentAbv": {
      "type": "string",
      "defaultValue": "D",
      "metadata": {
        "description": "environment abreviation - D(ev), Q(a), P(rod)"
      },
      "minLength": 1,
      "maxLength": 1
    },
    "applicationNameAbv": {
      "type": "string",
      "defaultValue": "OTM",
      "metadata": {
        "description": "3 Letter App Abreviation"
      }
    },
    "vmPurpose": {
      "type": "string",
      "metadata": {
        "description": "The abbreviated application name"
      }
    }
  },
  "variables": {
    "vnetId": "[resourceId(parameters('virtualNetworkRGName'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "vmname": "[concat('CN-AZR-',parameters('environmentAbv'),'W', parameters('applicationNameAbv'), parameters('vmPurpose'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2016-09-01",
      "name": "[concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/availabilitySets",
      "apiVersion": "2016-04-30-preview",
      "name": "[parameters('availabilitySetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "platformUpdateDomainCount": "[parameters('availabilitySetUpdateDomainCount')]",
        "platformFaultDomainCount": "[parameters('availabilitySetFaultDomainCount')]",
        "virtualMachines": []
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "name": "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [
        "nicLoop",
        "[concat('Microsoft.Compute/availabilitySets/', parameters('availabilitySetName'))]"
      ],
      "properties": {
        "licenseType": "Windows_Server",
        "osProfile": {
          "computerName": "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "id": "[concat('/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/CUST-A-CN-SS-ChinaEast2-Images/providers/Microsoft.Compute/galleries/SharedImageGalleryCNChinaEast2SS/images/', parameters('sharedImage'),'/versions/', parameters('sharedImageVersion'))]"
          },       
          "osDisk": {
            "createOption": "FromImage",
            "name": "[concat('Disk-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-OS')]",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskStorageType')]"
            },
            "diskSizeGB": "[parameters('osDiskSize')]"
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[length(parameters('dataDisks'))]",
              "input": {
                "name": "[concat('Disk-',variables('vmname'),padLeft(copyIndex('virtualMachineLoop',parameters('startNumber')),2,'0'),'-Data-LUN',copyIndex('dataDisks'))]",
                "lun": "[parameters('dataDisks')[copyIndex('dataDisks')].lun]",
                "diskSizeGB": "[parameters('dataDisks')[copyIndex('dataDisks')].diskSizeGB]",
                "managedDisk": {
                  "storageAccountType": "[parameters('dataDisks')[copyIndex('dataDisks')].managedDisk.storageAccountType]"
                },
                "createOption": "[parameters('dataDisks')[copyIndex('dataDisks')].createOption]",
                "caching": "[parameters('dataDisks')[copyIndex('dataDisks')].caching]"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1'))]"
            }
          ]
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName'))]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('diagStorageAccountName'),'.blob.core.chinacloudapi.cn')]"          }
        }

      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmname'), padLeft(copyIndex(parameters('startNumber')),2,'0'), '/BGInfo')]",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "BGInfoLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true
      },
      "dependsOn": [
        "virtualMachineLoop"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmname'), padLeft(copyIndex(parameters('startNumber')),2,'0'), '/joindomain')]",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",

      "copy": {
        "name": "JoinDomainLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainFQDNToJoin')]",
          "OUPath": "[parameters('ouPath')]",
          "User": "[concat(parameters('domainUserDomainFQDN'), '\\', parameters('domainUser'))]",
          "Restart": "true",
          "Options": "[parameters('domainJoinOptions')]"
        },
        "protectedSettings": {
          "Password": "[parameters('domainPassword')]"
        }
      },
      "dependsOn": [
        "BGInfoLoop"
      ]
    }
  ],
  "outputs": {}
}