{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "0.9.0.0",
  "parameters": {
    "clusterLoginUserName": {
      "type": "string",
      "defaultValue": "admin",
      "metadata": {
        "description": "These credentials can be used to submit jobs to the cluster and to log into cluster dashboards."
      }
    },
    "clusterLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
      }
    },
    "clusterVersion": {
      "type": "string",
      "defaultValue": "3.6",
      "metadata": {
        "description": "HDInsight cluster version."
      }
    },
    "headNodeVMSize": {
      "type": "string",
      "defaultValue": "Standard_D3_v2",
      "metadata": {
        "description": "Size of the head nodes (there are 2)"
      }
    },
    "workerNodeVMSize": {
      "type": "string",
      "defaultValue": "Standard_D3_v2",
      "metadata": {
        "description": "Size of the worker nodes"
      }
    },
    "clusterWorkerNodeCount": {
      "type": "int",
      "defaultValue": 8,
      "metadata": {
        "description": "The number of nodes in the HDInsight cluster."
      }
    },
    "clusterKind": {
      "type": "string",
      "defaultValue": "HADOOP",
      "metadata": {
        "description": "The type of the HDInsight cluster to create."
      }
    },
    "sshUser": {
      "type": "string",
      "defaultValue": "sshuser",
      "metadata": {
        "description": "These credentials can be used to remotely access the cluster."
      }
    },
    "sshPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
      }
    },
    "existingVnetRG": {
      "type": "string",
      "defaultValue": "test-vnet02",
      "metadata": {
        "description": "Resource Group of the existing Virtual Network"
      }
    },
    "existingVnet": {
      "type": "string",
      "defaultValue": "test-vnet02",
      "metadata": {
        "description": "Name of the existing Virtual Network"
      }
    },
    "existingSubnet": {
      "type": "string",
      "defaultValue": "hdi-kafka",
      "metadata": {
        "description": "Name of the subnet within the existing Virtual Network"
      }
    },
    "asaStorageTag": {
      "type": "string",
      "defaultValue": "asa",
      "metadata": {
        "description": "The 'use' param on the storage account template"
      }
    },
    "asaStorageRG": {
      "type": "string",
      "defaultValue": "test-storage",
      "metadata": {
        "description": "Resource group of the ASA storage account"
      }
    },
    "locationAbv": {
      "type": "string",
      "defaultValue": "eus",
      "metadata": {
        "description": "The shorter version of the deployment region. E.G. uksouth, seasia"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "Dev",
      "metadata": {
        "description": "The abbreviated environment label"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "AM",
      "metadata": {
        "description": "The abbreviated Azure Region code"
      }
    },
    "storageRG": {
      "type": "string",
      "defaultValue": "test-hdistorage"
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "baseNamingPrefix": "[concat(parameters('environment'), '-', parameters('region'), '-',  variables('location'), '-', parameters('application'))]",
    "clusterName": "[tolower(concat('hdih', variables('baseNamingPrefix')))]",
    "containername": "[tolower(concat('container-', variables('clusterName')))]",
    "sshUser": "[parameters('sshUser')]",
    "sshPassword": "[parameters('sshPassword')]",
    "clusterLoginUserName": "[parameters('clusterLoginUserName')]",
    "clusterLoginPassword": "[parameters('clusterLoginPassword')]",
    "tenantId": "[subscription().subscriptionId]",
    "vNetId": "[concat('/subscriptions/', variables('tenantId'), '/resourceGroups/', parameters('existingVnetRG'), '/providers/Microsoft.Network/virtualNetworks/' , parameters('existingVnet'))]",
    "vNetSubnet": "[concat(variables('vNetId'), '/subnets/', parameters('existingSubnet'))]",
    "asaStorage": "[tolower(concat('sa', parameters('region'), parameters('locationAbv'), parameters('environment'), parameters('application'), parameters('asaStorageTag'), '01'))]",
    "storagekey": "[concat('/',subscription().id,'/resourceGroups/', parameters('asaStorageRG'),'/providers/Microsoft.Storage/storageAccounts/')]",
    "primary": "testhdiprimary",
    "secondary": "testhdisecondary",
    "resourceID": "[resourceId('test-hdistorage','Microsoft.Storage/storageAccounts', 'testhdiprimary')]",

  },

  "resources": [
    {
      "apiVersion": "2015-03-01-preview",
      "name": "[variables('clusterName')]",
      "type": "Microsoft.HDInsight/clusters",
      "location": "[resourceGroup().location]",
      "dependsOn": [
      ],
      "properties": {
        "clusterVersion": "[parameters('clusterVersion')]",
        "osType": "Linux",
        "tier": "standard",
        "clusterDefinition": {
          "kind": "[parameters('clusterKind')]",
          "componentVersion": {
            "Hadoop": "2.7"
          },
          "configurations": {
            "gateway": {
              "restAuthCredential.isEnabled": true,
              "restAuthCredential.username": "[parameters('clusterLoginUserName')]",
              "restAuthCredential.password": "[parameters('clusterLoginPassword')]"
            }
          }
        },
        "storageProfile": {
          "storageaccounts": [
            {
              "name": "[concat(variables('primary') , '.blob.core.windows.net')]",
              "isDefault": true,
              "container": "[variables('containername')]",
              /*"key": "TtufEm6p0oGsNXDChltb/iWGu3oEUvPhblmt3tGxLCD8+iCfol9i7YKKiJSF1xMp3qPp5Hl4a9xggldDzjfwrw=="*/
              "key": "[listKeys(variables('resourceID'), '2018-03-01-preview').keys[0].value]"

            },
            {
              "name": "[concat(variables('secondary') , '.blob.core.windows.net')]",
              "isDefault": false,
              "container": "[variables('containername')]",
              "key": "[listKeys(resourceId(concat(subscription().id,'/resourceGroups/', parameters('storageRG'),'/providers/Microsoft.Storage/storageAccounts/', variables('secondary')), '2015-05-01-preview').keys[0].value)]"
            }
          ]
        },
        "computeProfile": {
          "roles": [
            {
              "name": "headnode",
              "minInstanceCount": 1,
              "targetInstanceCount": 2,
              "hardwareProfile": {
                "vmSize": "[parameters('headNodeVMSize')]"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "[variables('sshUser')]",
                  "password": "[parameters('sshPassword')]"
                }
              },
              "virtualNetworkProfile": {
                "id": "[variables('vNetId')]",
                "subnet": "[variables('vNetSubnet')]"
              },
              "scriptActions": []
            },
            {
              "name": "workernode",
              "minInstanceCount": 1,
              "targetInstanceCount": "[parameters('clusterWorkerNodeCount')]",
              "hardwareProfile": {
                "vmSize": "[parameters('workerNodeVMSize')]"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "[variables('sshUser')]",
                  "password": "[parameters('sshPassword')]"
                }
              },
              "virtualNetworkProfile": {
                "id": "[variables('vNetId')]",
                "subnet": "[variables('vNetSubnet')]"
              },
              "scriptActions": []
            },
            {
              "name": "zookeepernode",
              "minInstanceCount": 1,
              "targetInstanceCount": 3,
              "hardwareProfile": {
                "vmSize": "Large"
              },
              "osProfile": {
                "linuxOperatingSystemProfile": {
                  "username": "[parameters('sshUser')]",
                  "password": "[parameters('sshPassword')]"
                }
              },
              "virtualNetworkProfile": {
                "id": "[variables('vNetId')]",
                "subnet": "[variables('vNetSubnet')]"
              },
              "scriptActions": []
            }
          ]
        }
      }
    }/*
