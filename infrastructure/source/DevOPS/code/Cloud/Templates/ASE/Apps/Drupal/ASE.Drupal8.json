{
    "parameters": {
        "databaseName": {
            "type": "string"
        },
        "administratorLogin": {
            "type": "string"
        },
        "administratorLoginPassword": {
            "type": "securestring"
        },
        "mysqLocation": {
            "type": "string"
        },
        "serverName": {
            "type": "string"
        },
        "charset": {
            "type": "string"
        },
        "collation": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "hostingEnvironment": {
            "type": "string"
        },
        "serverFarmResourceGroup": {
            "type": "string"
        },
        "subscriptionId": {
            "type": "string"
        }
    },
    "resources": [
        {
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "PHPMYADMIN_EXTENSION_VERSION",
                            "value": "latest"
                        },
                        {
                            "name": "WEBSITE_DYNAMIC_CACHE",
                            "value": "0"
                        }
                    ],
                    "phpVersion": "7.0",
                    "connectionStrings": [
                        {
                            "name": "defaultConnection",
                            "ConnectionString": "[concat('Database=', parameters('databaseName'), ';Data Source=', parameters('serverName') ,'.mysql.database.azure.com;User Id=',parameters('administratorLogin'),'@',parameters('serverName') ,';Password=',parameters('administratorLoginPassword'))]",
                            "type": "MySQL"
                        }
                    ]
                },
                "name": "[parameters('name')]",
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "hostingEnvironment": "[parameters('hostingEnvironment')]"
            },
            "resources": [
                {
                    "apiVersion": "2018-11-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('name'))]"
                    ],
                    "properties": {
                        "RepoUrl": "https://github.com/sunbuild/drupalcms-azure",
                        "branch": "master",
                        "IsManualIntegration": true
                    }
                }
            ],
            "dependsOn": [],
            "apiVersion": "2018-11-01",
            "location": "[parameters('location')]"
        },
        {
            "name": "[concat(parameters('serverName'),'/',parameters('databaseName'))]",
            "type": "Microsoft.DBforMySQL/servers/databases",
            "apiVersion": "2017-12-01-preview",
            "properties": {
                "charset": "[parameters('charset')]",
                "collation": "[parameters('collation')]"
            }
        }
    ],
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}