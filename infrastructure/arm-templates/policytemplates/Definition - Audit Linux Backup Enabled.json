{
  "properties": {
    "mode": "All",
    "parameters": {},
    "displayName": "Audit Linux VMs missing Backup Configurations",
    "description": "Audit the Linux VMs which are missing backup configurations in the environment",
    "policyRule": {
        "if": {
            "allOf": [
                {
                  "field": "type",
                  "equals": "Microsoft.Compute/virtualMachines"
                },
                {
                  "allOf": [
                      {
                        "field": "Microsoft.Compute/imagePublisher",
                        "in": [
                          "Canonical",
                          "RedHat"
                        ]
                      },
                      {
                        "field": "Microsoft.Compute/imageOffer",
                        "in": [
                          "UbuntuServer",
                          "RHEL"
                        ]
                      },
                      {
                        "field": "Microsoft.Compute/imageSKU",
                        "in": [
                          "18.04-LTS",
                          "16.04-LTS",
                          "14.04-LTS",
                          "7-LVM"
                        ]  
                      }
                  ]
                }
            ]
      },
      "then": {
        "effect": "auditIfNotExists",
        "details": {
          "type": "Microsoft.RecoveryServices/backupprotecteditems",
          "existenceCondition": {
            "field": "name",
            "like": "*"
          }
        }
      }
    }
  }
}