{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "existingMGMTRG": {
      "type": "string",
      "allowedValues": [
        "rg-region1-nonprod-paas-mgmt",
        "rg-region1-myelc-mgmt",
        "rg-region1-bobbibrown-mgmt",
        "rg-region1-devopspoc-mgmt",
        "rg-region1-nonprod-ceplatam-mgmt",
        "rg-region1-nonprod-cornerstone-mgmt",
        "rg-region1-nonprod-datalake-mgmt",
        "rg-region1-nonprod-e2e-mgmt",
        "rg-region1-nonprod-O9-mgmt",
        "rg-region1-nonprod-paas-mgmt",
        "rg-region1-prod-ceplatam-mgmt",
        "rg-region1-prod-edlna-mgmt",
        "rg-region1-prod-O9-mgmt",
        "rg-region1-prod-paas-mgmt",
        "rg-region1-public-mgmt",
        "rg-region1-sap-mgmt",
        "rg-region2-nonprod-DataLake-mgmt",
        "rg-region2-nonprod-v2-mgmt",
        "rg-region2-prod-DataLake-mgmt",
        "rg-region2-prod-v2-mgmt",
        "rg-region3-nonprod-v2-mgmt",
        "rg-region3-prod-v2-mgmt",
        "rg-nonprod-learn-mgmt",
        "rg-nonprod-sap-mgmt",
        "rg-prod-cornerstone-mgmt",
        "rg-prod-learn-mgmt",
        "rg-prod-sap-mgmt"
      ],
      "metadata": {
        "description": "Recovery services vault name where the VMs will be backed up to. "
      }
    },
    "existingRecoveryServicesVault": {
      "type": "string",
      "allowedValues": [
        "rsv-am-eastus-nonprod-PaaS",
        "rsv-am-EastUS-myelx",
        "rsv-am-EastUS-bobbibrown",
        "rsv-am-eastus-devopspoc",
        "rsv-am-eastus-nonprod-ceplatam",
        "rsv-am-eastus-nonprod-cornerstone",
        "rsv-am-eastus-NonProd-DataLake",
        "rsv-am-eastus-nonprod-e2e",
        "rsv-am-eastus-nonprod-o9",
        "rsv-am-eastus-nonprod-paas",
        "rsv-am-eastus-Prod-ceplatam",
        "rsv-am-eastus-prod-edlna",
        "rsv-am-eastus-prod-o9",
        "rsv-am-EastUS-prod-paas",
        "rsv-am-westus-prod-paas",
        "rsv-am-eastus-public",
        "rsv-am-eastus-sap",
        "rsv-ap-southeastasia-nonprod-datalake",
        "rsv-ap-koreacentral-nonprod-v2",
        "rsv-ap-southeastasia-nonprod-v2",
        "rsv-ap-southeastasia-prod-datalake",
        "rsv-ap-southeastasia-prod-v2",
        "rsv-eu-uksouth-nonprod-V2",
        "rsv-eu-uksouth-prod-v2",
        "rsv-am-eastus-nonprod-learn",
        "rsv-ap-southeastasia-nonprod-learn",
        "rsv-eastus-nonprod-sap",
        "rsv-eastus-prod-cornerstone",
        "rsv-eastus-prod-learn",
        "rsv-ap-southeastasia-prod-learn",
        "rsv-eu-uksouth-prod-sap",
        "rsv-test"
      ],
      "metadata": {
        "description": "Recovery services vault name where the VMs will be backed up to. "
      }
    },
    "VMResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "The VM image reference SKU"
      }
    },
    "existingBackupPolicy": {
      "type": "string",
      "defaultValue": "DefaultPolicy",
      "metadata": {
        "description": "Backup policy to be used to backup VMs. Backup Policy defines the schedule of the backup and how long to retain backup copies. By default every vault comes with a 'DefaultPolicy' which canbe used here."
      }
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "sharedImage": {
      "type": "string",
      "defaultValue": "SharedImage-AM-EastUS-SS-Ubuntu-1604",
      "allowedValues": [
      "SharedImage-AM-EastUS-SS-CentOS-75",
      "SharedImage-AM-EastUS-SS-RHEL-74",
      "SharedImage-AM-EastUS-SS-RHEL-76",
      "SharedImage-AM-EastUS-SS-Ubuntu-1604",
      "SharedImage-AM-EastUS-SS-Ubuntu-1804"
      ],
      "metadata": {
          "description": "The name of the shared image"
        }
      },
    "sharedImageVersion": {
      "type": "string",
      "defaultValue": "2019.01.18",
      "allowedValues": [
      "2019.06.11",
      "2019.04.15",
      "2019.01.18",
      "2018.03.13",
      "2018.08.13",
      "2018.10.16"      
      ],
      "metadata": {
          "description": "The version of the shared image"
        }
      },      
    "osDiskSize":{
      "type":"int",
      "defaultValue": 128,
      "metadata": {
        "description":"Disk size of OS, in GB"
      }
    },
    "osDiskStorageType": {
      "type": "string",
      "allowedValues": [
        "StandardSSD_LRS",
        "PremiumSSD_LRS"
      ],
      "defaultValue": "StandardSSD_LRS"
    },  
    "dataDisks": {
      "type": "array"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "virtualNetworkRGName": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    },
    "availabilitySetName": {
      "type": "string"
    },
    "enableAcceleratedNetworking": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable Accelerated Networking"
      }
    },
    "joinILBBackendPool": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Join the VM's to the ILB Backend Pool"
      }
    },
    "ilbName": {
      "type": "string",
      "defaultValue": "null",
      "metadata": {
        "description": "Name of ILB to join"
      }
    },
    "ilbBackendPoolName": {
      "type": "string",
      "defaultValue": "null",
      "metadata": {
        "description": "Name of ILB Backend Pool to join"
      }
    },
    "useAvailabilityZones": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Configure the VM's to use Availability Zones"
      }
    },
    "availabilitySetUpdateDomainCount": {
      "type": "int"
    },
    "availabilitySetFaultDomainCount": {
      "type": "int"
    },
    "diagStorageAccountName": {
      "type": "string",
      "defaultValue": "savmdiagdwxiqj64pubhw",
      "metadata": {
        "description": "The name of the diagnostic storage account for the subscription. The sotrage account should begin with savmdiag-"
      }
    },
    "numberOfInstances": {
      "type": "int"
    },
    "startNumber": {
      "type": "int"
    },
    "vmRegion": {
      "type": "string",
      "defaultValue": "US",
      "metadata": {
        "description": "Region of VM based off naming convention"
      },
      "allowedValues": [
        "US",
        "SG",
        "UK",
        "CN"
      ]
    },
    "environmentAbv": {
      "type": "string",
      "metadata": {
        "description": "The abbreviated environment letter"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "The Azure region for this deployment"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "vmPurpose": {
      "type": "string",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "workspaceName": {
      "type": "string",
      "allowedValues": [
        "laws-am-eastus",
        "laws-ap-southeastasia",
        "laws-eu-uksouth",
        "la-am-eastus-devopspoc"
      ],
      "metadata": {
        "description": "Log Analytics workspace ID for the Log Analytics workspace to which logs will be sent."
      }
    },
    "laResourceGroup": {
      "type": "string",
      "allowedValues": [
        "rg-am-eastus",
        "rg-ap-southeastasia",
        "rg-eu-uksouth",
        "rg-region1-devopspoc-mgmt"

      ],
      "metadata": {
        "description": "The Resource Group where the Log Analytics workspace resides to which logs will be sent."
      }
    }
  },
  "variables": {
    "vnetId": "[resourceId(parameters('virtualNetworkRGName'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "vmname": "[if(equals(parameters('location'),'WestUS'),concat(parameters('vmRegion'), '-AZ2-',parameters('environmentAbv'),'U', parameters('application'), parameters('vmPurpose')),concat(parameters('vmRegion'), '-AZR-',parameters('environmentAbv'),'U', parameters('application'), parameters('vmPurpose')))]",
    "backendPoolRef": "[if(parameters('joinILBBackendPool'),json(concat('[{\"id\": \"', concat(resourceId('Microsoft.Network/loadBalancers', parameters('ilbName')), '/backendAddressPools/', parameters('ilbBackendPoolName')), '\"}]')), json('[]'))]",
    "wadlogs": "<WadCfg> <DiagnosticMonitorConfiguration overallQuotaInMB=\"4096\" xmlns=\"http://schemas.microsoft.com/ServiceHosting/2010/10/DiagnosticsConfiguration\"> <DiagnosticInfrastructureLogs scheduledTransferLogLevelFilter=\"Error\"/> <WindowsEventLog scheduledTransferPeriod=\"PT1M\" > <DataSource name=\"Application!*[System[(Level = 1 or Level = 2)]]\" /> <DataSource name=\"Security!*[System[(Level = 1 or Level = 2)]]\" /> <DataSource name=\"System!*[System[(Level = 1 or Level = 2)]]\" /></WindowsEventLog>",
    "wadperfcounters1": "<PerformanceCounters scheduledTransferPeriod=\"PT1M\"><PerformanceCounterConfiguration counterSpecifier=\"\\Processor(_Total)\\% Processor Time\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"CPU utilization\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Processor(_Total)\\% Privileged Time\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"CPU privileged time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Processor(_Total)\\% User Time\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"CPU user time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Processor Information(_Total)\\Processor Frequency\" sampleRate=\"PT15S\" unit=\"Count\"><annotation displayName=\"CPU frequency\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\System\\Processes\" sampleRate=\"PT15S\" unit=\"Count\"><annotation displayName=\"Processes\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Process(_Total)\\Thread Count\" sampleRate=\"PT15S\" unit=\"Count\"><annotation displayName=\"Threads\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Process(_Total)\\Handle Count\" sampleRate=\"PT15S\" unit=\"Count\"><annotation displayName=\"Handles\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\% Committed Bytes In Use\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"Memory usage\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\Available Bytes\" sampleRate=\"PT15S\" unit=\"Bytes\"><annotation displayName=\"Memory available\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\Committed Bytes\" sampleRate=\"PT15S\" unit=\"Bytes\"><annotation displayName=\"Memory committed\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\Commit Limit\" sampleRate=\"PT15S\" unit=\"Bytes\"><annotation displayName=\"Memory commit limit\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\% Disk Time\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"Disk active time\" locale=\"en-us\"/></PerformanceCounterConfiguration>",
    "wadperfcounters2": "<PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\% Disk Read Time\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"Disk active read time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\% Disk Write Time\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"Disk active write time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\Disk Transfers/sec\" sampleRate=\"PT15S\" unit=\"CountPerSecond\"><annotation displayName=\"Disk operations\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\Disk Reads/sec\" sampleRate=\"PT15S\" unit=\"CountPerSecond\"><annotation displayName=\"Disk read operations\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\Disk Writes/sec\" sampleRate=\"PT15S\" unit=\"CountPerSecond\"><annotation displayName=\"Disk write operations\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\Disk Bytes/sec\" sampleRate=\"PT15S\" unit=\"BytesPerSecond\"><annotation displayName=\"Disk speed\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\Disk Read Bytes/sec\" sampleRate=\"PT15S\" unit=\"BytesPerSecond\"><annotation displayName=\"Disk read speed\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk(_Total)\\Disk Write Bytes/sec\" sampleRate=\"PT15S\" unit=\"BytesPerSecond\"><annotation displayName=\"Disk write speed\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\LogicalDisk(_Total)\\% Free Space\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"Disk free space (percentage)\" locale=\"en-us\"/></PerformanceCounterConfiguration></PerformanceCounters>",
    "wadcfgxstart": "[concat(variables('wadlogs'), variables('wadperfcounters1'), variables('wadperfcounters2'), '<Metrics resourceId=\"')]",
    "wadmetricsresourceid": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name , '/providers/', 'Microsoft.Compute/virtualMachines/')]",
    "wadcfgxend": "\"><MetricAggregation scheduledTransferPeriod=\"PT1H\"/><MetricAggregation scheduledTransferPeriod=\"PT1M\"/></Metrics></DiagnosticMonitorConfiguration></WadCfg>"  
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-09-01",
      "name": "[concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [],
      "properties": {
        "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]",
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "loadBalancerBackendAddressPools": "[variables('backendPoolRef')]"
            }
          }
        ]
      }
    },
    {
      "condition": "[not(parameters('useAvailabilityZones'))]",
      "type": "Microsoft.Compute/availabilitySets",
      "apiVersion": "2016-04-30-preview",
      "name": "[parameters('availabilitySetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "platformUpdateDomainCount": "[parameters('availabilitySetUpdateDomainCount')]",
        "platformFaultDomainCount": "[parameters('availabilitySetFaultDomainCount')]",
        "virtualMachines": []
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "name": "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
      "location": "[resourceGroup().location]",
      "zones": "[if(parameters('useAvailabilityZones'),split(string(add(mod(copyIndex(),3),1)), ','),json('[]'))]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [
        "nicLoop",
        "[concat('Microsoft.Compute/availabilitySets/', parameters('availabilitySetName'))]",
        "[parameters('availabilitySetName')]"
      ],
      "properties": {       
        "osProfile": {
          "computerName": "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
              "id": "[concat('/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/rg-region1-SS-Images/providers/Microsoft.Compute/galleries/SharedImageGalleryAMEastUSSS/images/', parameters('sharedImage'),'/versions/', parameters('sharedImageVersion'))]"
            },                  
          "osDisk": {
            "createOption": "FromImage",
            "name": "[concat('Disk-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-OS')]",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskStorageType')]"
            },
            "diskSizeGB":"[parameters('osDiskSize')]"
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[length(parameters('dataDisks'))]",
              "input": {
                "name": "[concat('Disk-',variables('vmname'),padLeft(copyIndex('virtualMachineLoop',parameters('startNumber')),2,'0'),'-Data-LUN',copyIndex('dataDisks'))]",
                "lun": "[parameters('dataDisks')[copyIndex('dataDisks')].lun]",
                "diskSizeGB": "[parameters('dataDisks')[copyIndex('dataDisks')].diskSizeGB]",
                "managedDisk": {
                  "storageAccountType": "[parameters('osDiskStorageType')]"
                },
                "createOption": "[parameters('dataDisks')[copyIndex('dataDisks')].createOption]",
                "caching": "[parameters('dataDisks')[copyIndex('dataDisks')].caching]"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1'))]"
            }
          ]
        },
        "availabilitySet": "[if(parameters('useAvailabilityZones'), json('null'), json(concat('{\"id\": \"', resourceId('Microsoft.Compute/availabilitySets',parameters('availabilitySetName')), '\"}')))]",
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('diagStorageAccountName'),'.blob.core.windows.net')]"
          }
        }
      },
      "resources": [
        {
          "type": "extensions",
          "name": "OMSExtension",
          "apiVersion": "2015-06-15",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]" 
          ],
          "properties": {
            "publisher": "Microsoft.EnterpriseCloud.Monitoring",
            "type": "OmsAgentForLinux",
            "typeHandlerVersion": "1.7",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "workspaceId": "[reference(resourceId('00000000-0000-0000-0000-000000000000', parameters('laResourceGroup'), 'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').customerId]"
            },
            "protectedSettings": {
              "workspaceKey": "[listKeys(resourceId('00000000-0000-0000-0000-000000000000', parameters('laResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').primarySharedKey]"
            }
          }
        }
      ]  
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[concat('RecoveryServices', variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('existingMGMTRG')]",
      "dependsOn": ["virtualMachineLoop"],
      "copy": {
        "name": "BackupLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "properties": {
        "mode":"Incremental",
          "template": {
            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "resources": [
            {
              "name": "[concat(parameters('existingRecoveryServicesVault'), '/', 'Azure', '/', 'iaasvmcontainer;iaasvmcontainerv2;', parameters('VMResourceGroup'), ';', variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'), '/', 'vm;iaasvmcontainerv2;', parameters('VMResourceGroup'),';', variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
              "apiVersion": "2016-06-01",
              "location": "[resourceGroup().location]",
              "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
              "properties": {
                  "protectedItemType": "Microsoft.Compute/virtualMachines",
                  "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('existingRecoveryServicesVault'),parameters('existingBackupPolicy') )]",
                  "sourceResourceId": "[resourceId(subscription().subscriptionId,parameters('VMResourceGroup'),'Microsoft.Compute/virtualMachines', concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0')))]"
              }
            }
          ]
        }
      }
    }
  ],
  "outputs": {}
}