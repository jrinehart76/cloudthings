{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "existingMGMTRG": {
      "type": "string",
      "allowedValues": [],
      "metadata": {
        "description": "Recovery services vault name where the VMs will be backed up to. "
      }
    },
    "existingRecoveryServicesVault": {
      "type": "string",
      "allowedValues": [],
      "metadata": {
        "description": "Recovery services vault name where the VMs will be backed up to. "
      }
    },
    "VMResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "The VM image reference SKU"
      }
    },
    "existingBackupPolicy": {
      "type": "string",
      "defaultValue": "DefaultPolicy",
      "metadata": {
        "description": "Backup policy to be used to backup VMs. Backup Policy defines the schedule of the backup and how long to retain backup copies. By default every vault comes with a 'DefaultPolicy' which canbe used here."
      }
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_A4",
      "metadata": {
        "description": "The size of the virtual machine"
      }
    },
    "sharedImage": {
      "type": "string",
      "defaultValue": "SharedImage-AM-EastUS-SS-WindowsServer-2012R2",
      "allowedValues": [],
      "metadata": {
          "description": "The name of the shared image"
        }
      },
    "sharedImageVersion": {
      "type": "string",
      "defaultValue": "2019.01.19",
      "allowedValues": [
        "2018.07.31",
        "2019.01.19",
        "2019.01.18"
      ],
      "metadata": {
          "description": "The version of the shared image"
        }
      },      
    "osDiskStorageType": {
      "type": "string",
      "allowedValues": [
        "StandardSSD_LRS",
        "PremiumSSD_LRS"
      ],
      "defaultValue": "StandardSSD_LRS"
    },
    "osDiskSize":{
      "type":"int",
      "defaultValue": 128,
      "metadata": {
        "description":"Disk size of OS, in GB"
      }
    },
    "dataDisks": {
      "type": "array",
      "defaultValue": [
        {
          "lun": 0,
          "diskSizeGB": 32,
          "managedDisk": {
            "storageAccountType": "Standard_LRS"
          },
          "createOption": "empty",
          "caching": "None"
        }
      ],
      "metadata": {
        "description": "The data disk array"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "cloudadmin",
      "metadata": {
        "description": "The local admin username for the virtual machine"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The local admin password for the virtual machine"
      }
    },
    "virtualNetworkRGName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The name of the resource group that contians the vnet that the VM will be attached to"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The virtual network to which the VM will be attached"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "The subnet to which the VM will be deployed"
      }
    },
    "isStatic":{
      "type":"string",
      "defaultValue": "No",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "description":"Does the VM need a static private IP?"
      }
    },
    "staticIP":{
      "type":"string",
      "defaultValue":"0.0.0.0",
      "metadata": {
        "description":"Optional static IP for VM"
      }
    },
    "availabilitySetName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The availability set that will house the VM"
      }
    },
    "enableAcceleratedNetworking": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable Accelerated Networking"
      }
    },
    "joinILBBackendPool": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Join the VM's to the ILB Backend Pool"
      }
    },
    "ilbName": {
      "type": "string",
      "defaultValue": "null",
      "metadata": {
        "description": "Name of ILB to join"
      }
    },
    "ilbBackendPoolName": {
      "type": "string",
      "defaultValue": "null",
      "metadata": {
        "description": "Name of ILB Backend Pool to join"
      }
    },
    "useAvailabilityZones": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Configure the VM's to use Availability Zones"
      }
    },
    "availabilitySetUpdateDomainCount": {
      "type": "int",
      "defaultValue": 5,
      "metadata": {
        "description": "The number of update domains in the availability set"
      }
    },
    "availabilitySetFaultDomainCount": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "The number of fault domains in the availability set"
      }
    },
    "diagStorageAccountName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The central management storage accoutn where VM diagnostics will be stored"
      }
    },
    "domainFQDNToJoin": {
      "type": "string",
      "defaultValue": "testdomain.com"
    },
    "ouPath": {
      "type": "string",
      "defaultValue": "test",
      "metadata": { "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com" }
    },
    "domainUser": {
      "type": "string",
      "defaultValue": "domainusername",
      "metadata": {
        "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com"

      }
    },
    "domainUserDomainFQDN": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": ""
      }
    },
    "domainPassword": {
      "type": "securestring",
      "defaultValue": "password1*",
      "metadata": {
        "description": ""
      }
    },
    "domainJoinOptions": {
      "type": "int",
      "defaultValue": 3,
      "metadata": { "description": "Set of bit flags that define the join options. Default value of 3 is a combination of NETSETUP_JOIN_DOMAIN (0x00000001) & NETSETUP_ACCT_CREATE (0x00000002) i.e. will join the domain and create the account on the domain. For more information see https://msdn.microsoft.com/en-us/library/aa392154(v=vs.85).aspx" }
    },
    "PostBuildConfigScriptUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The URL to the post build configuration script"
      }
    },
    "PostBuildConfigScriptFileName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The file name of the post build configuration script"
      }
    },
    "PostBuildConfigScriptParameters": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The parameters fed to the post build configuration script"
      }
    },
    "numberOfInstances": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The number of VM instances to be deployed"
      }
    },
    "startNumber": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The beginning number to be appended to the VM name"
      }
    },
    "environmentAbv": {
      "type": "string",
      "defaultValue": "D",
      "metadata": {
        "description": "environment abreviation - D(ev), Q(a), P(rod)"
      },
      "minLength": 1,
      "maxLength": 1
    },
    "vmPurpose": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1,
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "vmRegion": {
      "type": "string",
      "defaultValue": "US",
      "metadata": {
        "description": "Region of VM based off naming convention"
      },
      "allowedValues": [
        "US",
        "SG",
        "UK",
        "CN",
        "KR"
      ]
    },
    "location": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "The Azure region for this deployment"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "workspaceName": {
      "type": "string",
      "allowedValues": [],
      "metadata": {
        "description": "Log Analytics workspace ID for the Log Analytics workspace to which logs will be sent."
      }
    },
    "laResourceGroup": {
      "type": "string",
      "allowedValues": [],
      "metadata": {
        "description": "The Resource Group where the Log Analytics workspace resides to which logs will be sent."
      }
    }
  },
  "variables": {
    "diagSARef": "[resourceId(parameters('existingMGMTRG'),'Microsoft.Storage/storageAccounts', parameters('diagStorageAccountName'))]",
    "vnetId": "[resourceId(parameters('virtualNetworkRGName'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "vmname": "[if(equals(parameters('location'),'WestUS'),concat(parameters('vmRegion'), '-AZ2-',parameters('environmentAbv'),'W', parameters('application'), parameters('vmPurpose')),concat(parameters('vmRegion'), '-AZR-',parameters('environmentAbv'),'W', parameters('application'), parameters('vmPurpose')))]",
    "backendPoolRef": "[if(parameters('joinILBBackendPool'),json(concat('[{\"id\": \"', concat(resourceId('Microsoft.Network/loadBalancers', parameters('ilbName')), '/backendAddressPools/', parameters('ilbBackendPoolName')), '\"}]')), json('[]'))]",
    "accountid": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/',parameters('existingMGMTRG'), '/providers/','Microsoft.Storage/storageAccounts/', parameters('diagStorageAccountName'))]"
    },
  "resources": [
    {
      "condition":"[equals(parameters('isStatic'),'Yes')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-09-01",
      "name": "[concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1-S')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [],
      "properties": {
        "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]",
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Static", 
              "privateIPAddress": "[parameters('staticIP')]"
            }
          }
        ]
      }
    },{
      "condition":"[equals(parameters('isStatic'),'No')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-09-01",
      "name": "[concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1-D')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [],
      "properties": {
        "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]",
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "loadBalancerBackendAddressPools": "[variables('backendPoolRef')]"
            }
          }
        ]
      }
    },
    {
      "condition": "[not(parameters('useAvailabilityZones'))]",
      "type": "Microsoft.Compute/availabilitySets",
      "apiVersion": "2016-08-30",
      "name": "[parameters('availabilitySetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "platformUpdateDomainCount": "[parameters('availabilitySetUpdateDomainCount')]",
        "platformFaultDomainCount": "[parameters('availabilitySetFaultDomainCount')]",
        "virtualMachines": []
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "name": "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
      "location": "[resourceGroup().location]",
      "zones": "[if(parameters('useAvailabilityZones'),split(string(add(mod(copyIndex(),3),1)), ','),json('[]'))]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [
        "nicLoop",
        "[concat('Microsoft.Compute/availabilitySets/', parameters('availabilitySetName'))]",
        "[parameters('availabilitySetName')]"
      ],
      "properties": {
        "licenseType": "Windows_Server",
        "osProfile": {
          "computerName": "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "id": "[concat('/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/rg-region1-SS-Images/providers/Microsoft.Compute/galleries/SharedImageGalleryAMEastUSSS/images/', parameters('sharedImage'),'/versions/', parameters('sharedImageVersion'))]"
          },                  
        "osDisk": {
            "createOption": "FromImage",
            "name": "[concat('Disk-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-OS')]",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskStorageType')]"
            },
            "diskSizeGB":"[parameters('osDiskSize')]"
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[length(parameters('dataDisks'))]",
              "input": {
                "name": "[concat('Disk-',variables('vmname'),padLeft(copyIndex('virtualMachineLoop',parameters('startNumber')),2,'0'),'-Data-LUN',copyIndex('dataDisks'))]",
                "lun": "[parameters('dataDisks')[copyIndex('dataDisks')].lun]",
                "diskSizeGB": "[parameters('dataDisks')[copyIndex('dataDisks')].diskSizeGB]",
                "managedDisk": {
                  "storageAccountType": "[parameters('osDiskStorageType')]"
                },
                "createOption": "[parameters('dataDisks')[copyIndex('dataDisks')].createOption]",
                "caching": "[parameters('dataDisks')[copyIndex('dataDisks')].caching]"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[if(equals(parameters('isStatic'),'Yes'),resourceId('Microsoft.Network/networkInterfaces', concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1-S')),resourceId('Microsoft.Network/networkInterfaces', concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1-D')))]"
            
            }
          ]
        },
        "availabilitySet": "[if(parameters('useAvailabilityZones'), json('null'), json(concat('{\"id\": \"', resourceId('Microsoft.Compute/availabilitySets',parameters('availabilitySetName')), '\"}')))]",
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('diagStorageAccountName'),'.blob.core.windows.net')]"
          }
        }

      },
      "resources": [
        {
          "type": "extensions",
          "name": "Microsoft.EnterpriseCloud.Monitoring",
          "apiVersion": "2015-06-15",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]" 
          ],
          "properties": {
            "publisher": "Microsoft.EnterpriseCloud.Monitoring",
            "type": "MicrosoftMonitoringAgent",
            "typeHandlerVersion": "1.0",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "workspaceId": "[reference(resourceId('00000000-0000-0000-0000-000000000000', parameters('laResourceGroup'), 'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').customerId]"
            },
            "protectedSettings": {
              "workspaceKey": "[listKeys(resourceId('00000000-0000-0000-0000-000000000000', parameters('laResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').primarySharedKey]"
            }
          }
        },
        {
          "name": "Microsoft.Insights.VMDiagnosticsSettings",
          "type": "extensions",
          "location": "[parameters('location')]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]" 
          ],
          "tags": {
            "displayName": "MSPdiagnosticsetting"
          },
          "properties": {
            "publisher": "Microsoft.Azure.Diagnostics",
            "type": "IaaSDiagnostics",
            "typeHandlerVersion": "1.5",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "WadCfg": {
                "DiagnosticMonitorConfiguration": {
                  "overallQuotaInMB": 5120,
                  "Metrics": {
                    "MetricAggregation": [
                      {
                        "scheduledTransferPeriod": "PT1H"
                      },
                      {
                        "scheduledTransferPeriod": "PT1M"
                      }
                    ]
                  },
                  "DiagnosticInfrastructureLogs": {
                    "scheduledTransferLogLevelFilter": "Error"
                  },
                  "PerformanceCounters": {
                    "scheduledTransferPeriod": "PT1M",
                    "PerformanceCounterConfiguration": [
                      {
                        "counterSpecifier": "\\Processor Information(_Total)\\% Processor Time",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Processor Information(_Total)\\% Privileged Time",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Processor Information(_Total)\\% User Time",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Processor Information(_Total)\\Processor Frequency",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\System\\Processes",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Process(_Total)\\Thread Count",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Process(_Total)\\Handle Count",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\System\\System Up Time",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\System\\Context Switches/sec",
                        "unit": "CountPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\System\\Processor Queue Length",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Memory\\% Committed Bytes In Use",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Memory\\Available Bytes",
                        "unit": "Bytes",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Memory\\Committed Bytes",
                        "unit": "Bytes",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Memory\\Cache Bytes",
                        "unit": "Bytes",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Memory\\Pool Paged Bytes",
                        "unit": "Bytes",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Memory\\Pool Nonpaged Bytes",
                        "unit": "Bytes",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Memory\\Pages/sec",
                        "unit": "CountPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Memory\\Page Faults/sec",
                        "unit": "CountPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Process(_Total)\\Working Set",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Process(_Total)\\Working Set - Private",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\% Disk Time",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\% Disk Read Time",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\% Disk Write Time",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\% Idle Time",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Disk Bytes/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Disk Read Bytes/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Disk Write Bytes/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Disk Transfers/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Disk Reads/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Disk Writes/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Avg. Disk sec/Transfer",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Avg. Disk sec/Read",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Avg. Disk sec/Write",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Avg. Disk Queue Length",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Avg. Disk Read Queue Length",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Avg. Disk Write Queue Length",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\% Free Space",
                        "unit": "Percent",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\LogicalDisk(_Total)\\Free Megabytes",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Network Interface(*)\\Bytes Total/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Network Interface(*)\\Bytes Sent/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Network Interface(*)\\Bytes Received/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Network Interface(*)\\Packets/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Network Interface(*)\\Packets Sent/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Network Interface(*)\\Packets Received/sec",
                        "unit": "BytesPerSecond",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Network Interface(*)\\Packets Outbound Errors",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      },
                      {
                        "counterSpecifier": "\\Network Interface(*)\\Packets Received Errors",
                        "unit": "Count",
                        "sampleRate": "PT60S"
                      }
                    ]
                  },
                  "WindowsEventLog": {
                    "scheduledTransferPeriod": "PT1M",
                    "DataSource": [
                      {
                        "name": "Application!*[System[(Level = 1 or Level = 2 or Level = 3)]]"
                      },
                      {
