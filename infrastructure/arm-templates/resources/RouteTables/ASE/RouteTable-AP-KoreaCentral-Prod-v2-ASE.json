{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "routeTableName": {
      "defaultValue": "RouteTable-AP-KoreaCentral-Prod-v2-ASE",
      "type": "String"
    },
    "Location": {
      "defaultValue": "KoreaCentral",
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Network/routeTables",
      "apiVersion": "2019-11-01",
      "name": "[parameters('routeTableName')]",
      "location": "[parameters('Location')]",
      "tags": {
        "ManagedBy": "10th Magnitude"
      },
      "properties": {
        "disableBgpRoutePropagation": true,
        "routes": [
          {
            "name": "UDR-VNET-AP-KoreaCentral-Prod-v2",
            "properties": {
              "addressPrefix": "10.251.136.0/21",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "10.251.129.36"
            }
          },
          {
            "name": "UDR-VNET-AP-KoreaCentral-SS-CoreSubnet",
            "properties": {
              "addressPrefix": "10.251.128.0/24",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "10.251.129.36"
            }
          },
          {
            "name": "UDR-IPv4-Slash0",
            "properties": {
              "addressPrefix": "0.0.0.0/0",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "10.251.129.100"
            }
          },
          {
            "name": "UDR-IPv4-10Slash8",
            "properties": {
              "addressPrefix": "10.0.0.0/8",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "10.251.129.36"
            }
          },
          {
            "name": "UDR-IPv4-172Slash12",
            "properties": {
              "addressPrefix": "172.16.0.0/12",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "10.251.129.36"
            }
          },
          {
            "name": "UDR-IPv4-192Slash16",
            "properties": {
              "addressPrefix": "192.168.0.0/16",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "10.251.129.36"
            }
          }
        ]
      }
    }
  ]
}