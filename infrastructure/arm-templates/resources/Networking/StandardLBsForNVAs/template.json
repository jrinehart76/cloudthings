{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkRGName": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualMachines": {
            "type": "array"
        },
        "trustSubnetName": {
            "type": "string"
        },
        "untrustSubnetName": {
            "type": "string"
        },
        "ilbName": {
            "type": "string"
        },
        "ilbFrontEndName": {
            "type": "string"
        },
        "ilbFrontEndSubnetName": {
            "type": "string"
        },
        "ilbFrontEndIp": {
            "type": "string"
        },
        "ilbBackendPoolName": {
            "type": "string"
        },
        "ilbHAPortLBRuleName": {
            "type": "string"
        },
        "ilbProbeName": {
            "type": "string"
        },
        "ilbProbeProtocol": {
            "type": "string"
        },
        "ilbProbePort": {
            "type": "int"
        },
        "publbPIPName": {
            "type": "string"
        },
        "publbName": {
            "type": "string"
        },
        "publbFrontEndName": {
            "type": "string"
        },
        "publbBackendPoolName": {
            "type": "string"
        },
        "publbRuleName": {
            "type": "string"
        },
        "publbFrontEndPort": {
            "type": "int"
        },
        "publbBackEndPort": {
            "type": "int"
        },
        "publbProbeName": {
            "type": "string"
        },
        "publbProbeProtocol": {
            "type": "string"
        },
        "publbProbePort": {
            "type": "int"
        },
        "tags": {
            "type": "object"
        }
    },
    "variables": {
        "vnetId": "[resourceId(parameters('virtualNetworkRGName'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "trustSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('trustSubnetName'))]",
        "untrustSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('untrustSubnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[parameters('ilbName')]",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "[parameters('ilbFrontEndName')]",
                        "properties": {
                            "privateIPAddress": "[parameters('ilbFrontEndIp')]",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[concat(variables('vnetId'), '/subnets/', parameters('ilbFrontEndSubnetName'))]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[parameters('ilbBackendPoolName')]"
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "[parameters('ilbHAPortLBRuleName')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('ilbName')), '/frontendIpConfigurations/', parameters('ilbFrontEndName'))]"
                            },
                            "frontendPort": 0,
                            "backendPort": 0,
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 4,
                            "protocol": "All",
                            "loadDistribution": "Default",
                            "disableOutboundSnat": false,
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('ilbName')), '/backendAddressPools/', parameters('ilbBackendPoolName'))]"
                            },
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('ilbName')), '/probes/', parameters('ilbProbeName'))]"
                            }
                        }
                    }
                ],
                "probes": [
                    {
                        "name": "[parameters('ilbProbeName')]",
                        "properties": {
                            "protocol": "[parameters('ilbProbeProtocol')]",
                            "port": "[parameters('ilbProbePort')]",
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ],
                "inboundNatRules": [],
                "outboundNatRules": [],
                "inboundNatPools": []
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('publbPIPName')]",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 4
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[parameters('publbName')]",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "[parameters('publbFrontEndName')]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publbPIPName'))]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[parameters('publbBackendPoolName')]"
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "[parameters('publbRuleName')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('publbName')), '/frontendIpConfigurations/', parameters('publbFrontEndName'))]"
                            },
                            "frontendPort": "[parameters('publbFrontEndPort')]",
                            "backendPort": "[parameters('publbBackEndPort')]",
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 4,
                            "protocol": "Tcp",
                            "loadDistribution": "Default",
                            "disableOutboundSnat": false,
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('publbName')), '/backendAddressPools/', parameters('publbBackendPoolName'))]"
                            },
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('publbName')), '/probes/', parameters('publbProbeName'))]"
                            }
                        }
                    }
                ],
                "probes": [
                    {
                        "name": "[parameters('publbProbeName')]",
                        "properties": {
                            "protocol": "[parameters('publbProbeProtocol')]",
                            "port": "[parameters('publbProbePort')]",
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ],
                "inboundNatRules": [],
                "outboundNatRules": [],
                "inboundNatPools": []
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publbPIPName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('virtualMachines')[copyIndex()].trustNIC.name]",
            "copy": {
                "name": "trustNICsLoop",
                "count": "[length(parameters('virtualMachines'))]"
            },
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[parameters('virtualMachines')[copyIndex()].trustNIC.ipConfigurationName]",
                        "properties": {
                            "privateIPAddress": "[parameters('virtualMachines')[copyIndex()].trustNIC.ipAddress]",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[variables('trustSubnetRef')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4",
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('ilbName')), '/backendAddressPools/', parameters('ilbBackendPoolName'))]"
                                }
                            ]
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": true,
                "primary": false,
                "virtualMachine": {
                    "id": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachines')[copyIndex()].name)]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/loadBalancers', parameters('ilbName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('virtualMachines')[copyIndex()].untrustNIC.name]",
            "copy": {
                "name": "untrustNICsLoop",
                "count": "[length(parameters('virtualMachines'))]"
            },
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[parameters('virtualMachines')[copyIndex()].untrustNIC.ipConfigurationName]",
                        "properties": {
                            "privateIPAddress": "[parameters('virtualMachines')[copyIndex()].untrustNIC.ipAddress]",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[variables('untrustSubnetRef')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4",
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('publbName')), '/backendAddressPools/', parameters('publbBackendPoolName'))]"
                                }
                            ]
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": true,
                "primary": false,
                "virtualMachine": {
                    "id": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachines')[copyIndex()].name)]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/loadBalancers', parameters('publbName'))]"
            ]
        }
    ]
}