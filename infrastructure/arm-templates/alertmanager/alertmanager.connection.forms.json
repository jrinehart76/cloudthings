{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "logicAppLocation": {
        "type": "string",
        "metadata": {
          "description": "Location of the Logic App."
        }
      },
      "connections_microsoftforms_name": {
        "defaultValue": "microsoftforms",
        "type": "String"
      }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Web/connections",
        "apiVersion": "2016-06-01",
        "name": "[parameters('connections_microsoftforms_name')]",
        "location": "[parameters('logicAppLocation')]",
        "properties": {
            "displayName": "dnite@msp.com",
            "customParameterValues": {},
            "api": {
                "id": "[concat('/subscriptions/00000000-0000-0000-0000-000000000000/providers/Microsoft.Web/locations/southcentralus/managedApis/', parameters('connections_microsoftforms_name'))]"
            }
        }
      }
    ],
    "outputs": {}
}