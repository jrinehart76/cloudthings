{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppId": {
        "type": "string"
    },
    "logicAppUrl": {
        "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/actionGroups",
      "apiVersion": "2018-03-01",
      "name": "PLATFORM-action-info-s4",
      "location": "Global",
      "properties": {
        "groupShortName": "PLATFORMIS4",
        "enabled": true,
        "logicAppReceivers": [
          {
            "name": "PLATFORM Alert Manager S4",
            "resourceId": "[parameters( 'logicAppId' )]",
            "callbackUrl": "[parameters( 'logicAppUrl' )]",
            "useCommonAlertSchema": true
          }
        ],
        "emailReceivers": []
      }
    }
  ],
  "outputs":{}
}