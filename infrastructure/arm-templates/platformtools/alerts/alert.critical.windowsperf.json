{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceLocation": {
            "type": "string"
        },
        "workspaceResourceId": {
            "type": "string"
        },
        "actionGroupId": {
            "type": "string"
        },
        "customerId": {
            "type": "string"
        },
        "version": {
            "type": "string"
        }
    },
    "variables": {
        "hiddenLinkTag": "[json( concat( '{\"hidden-link:', parameters('workspaceResourceId'), '\": \"Resource\"}' ) )]",
        "alertCopy": {
            "critAlertDetails": [
                {
                    "alertName": "MSP-windows-vm-critical-cpu",
                    "alertDescription": "[concat('Critical CPU Alert on Windows. ', parameters('version'))]",
                    "query": "//critical cpu alert for windows\r\n Perf\r\n | where Computer in ((Heartbeat | where OSType has 'windows' | distinct Computer))\r\n | where ObjectName has 'processor' and CounterName has 'processor time' and InstanceName has '_total'\r\n | where Computer !startswith 'hn'and Computer !startswith 'wn' and Computer !startswith 'zk' and Computer !startswith 'k8s' and Computer !startswith 'aks'\r\n | summarize [\"Average CPU\"]=avg(CounterValue) by Computer\r\n | where [\"Average CPU\"] >= 98",
                    "frequencyInMinutes": 15,
                    "timeWindowInMinutes": 60,
                    "emailSubject": "[concat(parameters('customerId'),'-Critical-CPU-Windows')]",
                    "thresholdOperator": "GreaterThan",
                    "threshold": 0,
                    "severity": 3
                },
                {
                    "alertName": "MSP-windows-vm-critical-mem",
                    "alertDescription": "[concat('Critical Memory Alert on Windows. ',parameters('version'))]",
                    "query": "//critical memory alert for windows\r\n Perf\r\n | where Computer in ((Heartbeat | where OSType has 'windows' | distinct Computer))\r\n | where ObjectName has 'memory' and CounterName has 'available mbytes'\r\n | where Computer !startswith 'hn'and Computer !startswith 'wn' and Computer !startswith 'zk' and Computer !startswith 'k8s' and Computer !startswith 'aks'\r\n | summarize [\"Average Available Memory\"]=avg(CounterValue) by Computer\r\n | where [\"Average Available Memory\"] < 512",
                    "frequencyInMinutes": 15,
                    "timeWindowInMinutes": 60,
                    "emailSubject": "[concat(parameters('customerId'),'-Critical-Memory-Windows')]",
                    "thresholdOperator": "GreaterThan",
                    "threshold": 0,
                    "severity": 3
                }
            ]
        }
    },
    "resources": [
        {
            "type": "Microsoft.Insights/scheduledQueryRules",
            "name": "[variables('alertCopy').critAlertDetails[copyIndex()].alertName]",
            "apiVersion": "2018-04-16",
            "location": "[parameters( 'workspaceLocation' )]",
            "tags": "[variables('hiddenLinkTag')]",
            "copy": {
                "count": "[length(variables('alertCopy').critAlertDetails)]",
                "name": "alertCopy"
            },
            "properties": {
                "description": "[variables('alertCopy').critAlertDetails[copyIndex()].alertDescription]",
                "enabled": "true",
                "source": {
                    "query": "[variables('alertCopy').critAlertDetails[copyIndex()].query]",
                    "dataSourceId": "[parameters('workspaceResourceId')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": "[variables('alertCopy').critAlertDetails[copyIndex()].frequencyInMinutes]",
                    "timeWindowInMinutes": "[variables('alertCopy').critAlertDetails[copyIndex()].timeWindowInMinutes]"
                },
                "action": {
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
                    "severity": "[variables('alertCopy').critAlertDetails[copyIndex()].severity]",
                    "throttlingInMin": 0,
                    "aznsAction": {
                        "actionGroup": [
                            "[parameters('actionGroupId')]"
                        ],
                        "emailSubject": "[variables('alertCopy').critAlertDetails[copyIndex()].emailSubject]"
                    },
                    "trigger": {
                        "thresholdOperator": "[variables('alertCopy').critAlertDetails[copyIndex()].thresholdOperator]",
                        "threshold": "[variables('alertCopy').critAlertDetails[copyIndex()].threshold]"
                    }
                }
            }
        }
    ]
}