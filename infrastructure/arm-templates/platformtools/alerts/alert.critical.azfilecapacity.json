{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "threshold": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "storage": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "severity": {
            "type": "string"
        },
        "subscriptionId": {
            "type": "string"
        },
        "storageResourceGroup": {
            "type": "string"
        },
        "actionGroup": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[concat('10m-', parameters('storage') ,'-azfileshare-alert')]",
            "location": "global",
            "tags": {},
            "properties": {
                "description": "[concat('Azure Storage File is at a critical capacity. ', parameters('version'))]",
                "severity": "[parameters('severity')]",
                "enabled": true,
                "scopes": [
                    "[concat('/subscriptions/', parameters('subscriptionId'), '/resourceGroups/', parameters('storageResourceGroup'), '/providers/Microsoft.Storage/storageAccounts/', parameters('storage'), '/fileServices/default')]"
                ],
                "evaluationFrequency": "PT5M",
                "windowSize": "PT1H",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": "[parameters('threshold')]",
                            "name": "Metric1",
                            "metricNamespace": "microsoft.storage/storageaccounts/fileservices",
                            "metricName": "FileCapacity",
                            "dimensions": [
                                {
                                    "name": "FileShare",
                                    "operator": "Include",
                                    "values": [
                                        "*"
                                    ]
                                }
                            ],
                            "operator": "GreaterThanOrEqual",
                            "timeAggregation": "Average",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.Storage/storageAccounts/services",
                "targetResourceRegion": "[parameters('location')]",
                "actions": [
                    {
                        "actionGroupId": "[parameters('actionGroup')]",
                        "webHookProperties": {}
                    }
                ]
            }
        }
    ]
}