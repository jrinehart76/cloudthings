{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "threshold": {
            "type": "string"
        },
        "storage": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "severity": {
            "type": "string"
        },
        "subscriptionId": {
            "type": "string"
        },
        "storageResourceGroup": {
            "type": "string"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "microsoft.insights/metricalerts",
            "apiVersion": "2018-03-01",
            "name": "MSP-storage-authentication-error",
            "location": "global",
            "properties": {
                "description": "[concat('Azure Storage Account ResponseType metric alert. ', parameters('version'))]",
                "severity": "[parameters('severity')]",
                "enabled": true,
                "scopes": [
                    "[concat('/subscriptions/', parameters('subscriptionId'), '/resourceGroups/', parameters('storageResourceGroup'), '/providers/Microsoft.Storage/storageAccounts/', parameters('storage'))]"
                ],
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": "[parameters('threshold')]",
                            "name": "Metric1",
                            "metricNamespace": "microsoft.storage/storageaccounts",
                            "metricName": "Transactions",
                            "dimensions": [
                                {
                                    "name": "ResponseType",
                                    "operator": "Include",
                                    "values": [
                                        "ServerOtherError",
                                        "ServerBusyError",
                                        "ServerTimeoutError",
                                        "AuthorizationError",
                                        "NetworkError",
                                        "ClientAccountBandwidthThrottlingError",
                                        "ClientAccountRequestThrottlingError",
                                        "ClientThrottlingError",
                                        "ClientTimeoutError",
                                        "ClientOtherError"
                                    ]
                                }
                            ],
                            "operator": "GreaterThan",
                            "timeAggregation": "Total",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.Storage/storageAccounts",
                "actions": [
                    {
                        "actionGroupId": "/subscriptions/987c15f0-5fa8-4216-9c10-8f3c8f5bd319/resourcegroups/prod-eus2-mt-us-proknow-rg/providers/microsoft.insights/actiongroups/MSP-alert-dev-proknow",
                        "webHookProperties": {
                        }
                    }
                ]
            }
        }
    ]
}