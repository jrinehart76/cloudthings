{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_A4",
      "metadata": {
        "description": "The size of the virtual machine"
      }
    },
    "sharedImage": {
      "type": "string",
      "defaultValue": "SharedImage-AM-EastUS-SS-WindowsServer-2012R2",
      "allowedValues": [
        "SharedImage-AM-EastUS-SS-WindowsServer-2012R2",
        "SharedImage-AM-EastUS-SS-WindowsServer-2016",
        "SharedImage-AM-EastUS-SS-WindowsServer-2019",
        "SharedImage-AM-EastUS-SS-WindowsServer-2016-Cornerstone-Workstation"
      ],
      "metadata": {
          "description": "The name of the shared image"
        }
      },
    "sharedImageVersion": {
      "type": "string",
      "defaultValue": "2019.01.19",
      "allowedValues": [
        "2018.07.31",
        "2019.01.19",
        "2019.01.18",
        "2019.10.23",
        "2020.06.05"
      ],
      "metadata": {
          "description": "The version of the shared image"
        }
      },      
    "osDiskStorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "The storage type of the managed disks"
      }
    },
    "osDiskSize":{
      "type":"int",
      "defaultValue": 128,
      "metadata": {
        "description":"Disk size of OS, in GB"
      }
    },
    "dataDisks": {
      "type": "array",
      "defaultValue": [
        {
          "lun": 0,
          "diskSizeGB": 32,
          "managedDisk": {
            "storageAccountType": "Standard_LRS"
          },
          "createOption": "empty",
          "caching": "None"
        }
      ],
      "metadata": {
        "description": "The data disk array"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "cloudadmin",
      "metadata": {
        "description": "The local admin username for the virtual machine"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The local admin password for the virtual machine"
      }
    },
    "virtualNetworkRGName": {
      "type": "string",
      "defaultValue": "RG-AM-EastUS-DevOpsPOC-Mgmt",
      "metadata": {
        "description": "The name of the resource group that contians the vnet that the VM will be attached to"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "VNET-AM-EastUS-POC-MSP",
      "metadata": {
        "description": "The virtual network to which the VM will be attached"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "The subnet to which the VM will be deployed"
      }
    },
    "isStatic":{
      "type":"string",
      "defaultValue": "No",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "description":"Does the VM need a static private IP?"
      }
    },
    "staticIP":{
      "type":"string",
      "defaultValue":"0.0.0.0",
      "metadata": {
        "description":"Optional static IP for VM"
      }
    },
    "availabilitySetName": {
      "type": "string",
      "defaultValue": "AS-AM-EastUS-POC-MSP-Server",
      "metadata": {
        "description": "The availability set that will house the VM"
      }
    },
    "availabilitySetUpdateDomainCount": {
      "type": "int",
      "defaultValue": 5,
      "metadata": {
        "description": "The number of update domains in the availability set"
      }
    },
    "availabilitySetFaultDomainCount": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "The number of fault domains in the availability set"
      }
    },
    "diagStorageAccountName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The central management storage accoutn where VM diagnostics will be stored"
      }
    },
    "domainFQDNToJoin": {
      "type": "string",
      "defaultValue": "testdomain.com"
    },
    "ouPath": {
      "type": "string",
      "defaultValue": "test",
      "metadata": { "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com" }
    },
    "domainUser": {
      "type": "string",
      "defaultValue": "domainusername",
      "metadata": {
        "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com"

      }
    },
    "domainUserDomainFQDN": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": ""
      }
    },
    "domainPassword": {
      "type": "securestring",
      "defaultValue": "password1*",
      "metadata": {
        "description": ""
      }
    },
    "domainJoinOptions": {
      "type": "int",
      "defaultValue": 3,
      "metadata": { "description": "Set of bit flags that define the join options. Default value of 3 is a combination of NETSETUP_JOIN_DOMAIN (0x00000001) & NETSETUP_ACCT_CREATE (0x00000002) i.e. will join the domain and create the account on the domain. For more information see https://msdn.microsoft.com/en-us/library/aa392154(v=vs.85).aspx" }
    },
    "PostBuildConfigScriptUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The URL to the post build configuration script"
      }
    },
    "PostBuildConfigScriptFileName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The file name of the post build configuration script"
      }
    },
    "PostBuildConfigScriptParameters": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The parameters fed to the post build configuration script"
      }
    },
    "numberOfInstances": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The number of VM instances to be deployed"
      }
    },
    "startNumber": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The beginning number to be appended to the VM name"
      }
    },
    "environmentAbv": {
      "type": "string",
      "defaultValue": "D",
      "metadata": {
        "description": "environment abreviation - D(ev), Q(a), P(rod)"
      },
      "minLength": 1,
      "maxLength": 1
    },
    "vmPurpose": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1,
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "vmRegion": {
      "type": "string",
      "defaultValue": "US",
      "metadata": {
        "description": "Region of VM based off naming convention"
      },
      "allowedValues": [
        "US",
        "SG",
        "UK",
        "CN"
      ]
    },
    "location": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "The Azure region for this deployment"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "Dev",
      "metadata": {
        "description": "The abbreviated environment label"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "AM",
      "metadata": {
        "description": "The abbreviated Azure Region code"
      }
    }
  },
  "variables": {
    "vnetId": "[resourceId(parameters('virtualNetworkRGName'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "vmname": "[if(equals(parameters('location'),'WestUS'),concat(parameters('vmRegion'), '-AZ2-',parameters('environmentAbv'),'W', parameters('application'), parameters('vmPurpose')),concat(parameters('vmRegion'), '-AZR-',parameters('environmentAbv'),'W', parameters('application'), parameters('vmPurpose')))]"
    
  },
  "resources": [
    {
      "condition":"[equals(parameters('isStatic'),'Yes')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2016-09-01",
      "name": "[concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1-S')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Static", 
              "privateIPAddress": "[parameters('staticIP')]"
            }
          }
        ]
      }
    },{
      "condition":"[equals(parameters('isStatic'),'No')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2016-09-01",
      "name": "[concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1-D')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/availabilitySets",
      "apiVersion": "2016-04-30-preview",
      "name": "[parameters('availabilitySetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "platformUpdateDomainCount": "[parameters('availabilitySetUpdateDomainCount')]",
        "platformFaultDomainCount": "[parameters('availabilitySetFaultDomainCount')]",
        "virtualMachines": []
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2018-10-01",
      "name": "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [
        "nicLoop",
        "[concat('Microsoft.Compute/availabilitySets/', parameters('availabilitySetName'))]"
      ],
      "properties": {
        "licenseType": "Windows_Server",
        "osProfile": {
          "computerName": "[concat(variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskStorageType')]"
                        }
                    },
                    "imageReference": {
                        "id": "/subscriptions/8a00b99b-04e8-474d-a318-397385dc07a4/resourceGroups/RG-AM-EastUS-SS-Images/providers/Microsoft.Compute/galleries/SharedImageGalleryAMEastUSSS/images/SharedImage-AM-EastUS-SS-WindowsServer-2016-Cornerstone-Workstation/versions/2019.10.23"
                    },
                    "copy": [
                        {
                            "name": "dataDisks",
                            "count": "[length(parameters('dataDisks'))]",
                            "input": {
                                "lun": "[parameters('dataDisks')[copyIndex('dataDisks')].lun]",
                                "createOption": "[parameters('dataDisks')[copyIndex('dataDisks')].createOption]",
                                "caching": "[parameters('dataDisks')[copyIndex('dataDisks')].caching]",
                                "writeAcceleratorEnabled": "[parameters('dataDisks')[copyIndex('dataDisks')].writeAcceleratorEnabled]",
                                "diskSizeGB": "[parameters('dataDisks')[copyIndex('dataDisks')].diskSizeGB]",
                                "managedDisk": {
                                    "id": "[coalesce(parameters('dataDisks')[copyIndex('dataDisks')].id, if(equals(parameters('dataDisks')[copyIndex('dataDisks')].name, json('null')), json('null'), resourceId('Microsoft.Compute/disks', parameters('dataDisks')[copyIndex('dataDisks')].name)))]",
                                    "storageAccountType": "[parameters('dataDisks')[copyIndex('dataDisks')].storageAccountType]"
                                }
                            }
                        }
                    ]
                },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[if(equals(parameters('isStatic'),'Yes'),resourceId('Microsoft.Network/networkInterfaces', concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1-S')),resourceId('Microsoft.Network/networkInterfaces', concat('NIC-',variables('vmname'),padLeft(copyIndex(parameters('startNumber')),2,'0'),'-1-D')))]"
            
            }
          ]
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName'))]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('diagStorageAccountName'),'.blob.core.windows.net')]"
          }
        }

      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmname'), padLeft(copyIndex(parameters('startNumber')),2,'0'), '/BGInfo')]",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "BGInfoLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true
      },
      "dependsOn": [
        "virtualMachineLoop"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmname'), padLeft(copyIndex(parameters('startNumber')),2,'0'), '/joindomain')]",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",

      "copy": {
        "name": "JoinDomainLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainFQDNToJoin')]",
          "OUPath": "[parameters('ouPath')]",
          "User": "[concat(parameters('domainUserDomainFQDN'), '\\', parameters('domainUser'))]",
          "Restart": "true",
          "Options": "[parameters('domainJoinOptions')]"
        },
        "protectedSettings": {
          "Password": "[parameters('domainPassword')]"
        }
      },
      "dependsOn": [
        "BGInfoLoop"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmname'), padLeft(copyIndex(parameters('startNumber')),2,'0'), '/PostBuildConfigScript')]",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "PostBuildConfigScriptLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.9",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[parameters('PostBuildConfigScriptUrl')]"
          ],
          "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File .\\', parameters('PostBuildConfigScriptFileName'), ' ', parameters('PostBuildConfigScriptParameters'))]"
        }
      },
      "dependsOn": [
        "JoinDomainLoop"
      ]
    }
  ],
  "outputs": {}
}