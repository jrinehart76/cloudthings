{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "The Azure region for this deployment"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "Dev",
      "metadata": {
        "description": "The abbreviated environment label"
      }
    },
    "application": {
      "type": "string",
      "defaultValue": "APP",
      "metadata": {
        "description": "The abbreviated application name"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "AM",
      "metadata": {
        "description": "The abbreviated Azure Region code"
      }
    },
    "existingVnet": {
      "type": "string",
      "defaultValue": "test-vnet02",
      "metadata": {
        "description": "Name of the existing Virtual Network"
      }
    },
    "existingVnetRG": {
      "type": "string",
      "defaultValue": "test-vnet02",
      "metadata": {
        "description": "Resource Group of the existing Virtual Network"
      }
    },
    "existingSubnet": {
      "type": "string",
      "defaultValue": "redis",
      "metadata": {
        "description": "Name of the subnet within the existing Virtual Network that CosmosDB will be deployed to"
      }
    },
    "capacityPoolName": {
      "type": "string",
      "defaultValue": "volume1",
      "metadata": {
        "description": "Name of capacity pool"
      }
    },
    "capacityPoolServiceLevel": {
      "type": "string",
      "defaultValue": "Standard",
      "allowedValues": [
        "Standard",
        "Premium"
      ],
      "metadata": {
        "description": "Capacity pool service level"
      }
    },
    "capacityPoolSizeInBytes": {
      "type": "int",
      "defaultValue": 4398046511104,
      "metadata": {
        "description": "Name of capacity pool. Minimum Value 4TB"
      }
    }
  },
  "variables": {
    "netAppAccountName": "[tolower(concat('NetApp-', parameters('region'), '-', parameters('location'), '-', parameters('environment'), '-', parameters('application')))]",
    "subnetId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('existingVNetRG'), '/providers/Microsoft.Network/virtualNetworks/', parameters('existingVNet'), '/subnets/', parameters('existingSubnet'))]"
  },
  "resources": [
    {
      "type": "Microsoft.NetApp/netAppAccounts",
      "apiVersion": "2019-07-01",
      "name": "[variables('netAppAccountName')]",
      "location": "eastus",
      "tags": {
        "ManagedBy": "ManagedServiceProvider"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.NetApp/netAppAccounts/capacityPools",
      "apiVersion": "2019-07-01",
      "name": "[concat(variables('netAppAccountName'), '/', parameters('capacityPoolName'))]",
      "location": "eastus",
      "dependsOn": [
        "[resourceId('Microsoft.NetApp/netAppAccounts', variables('netAppAccountName'))]"
      ],
      "tags": {
        "ManagedBy": "ManagedServiceProvider"
      },
      "properties": {
        "serviceLevel": "[parameters('capacityPoolServiceLevel')]",
        "size": "[parameters('capacityPoolSizeInBytes')]"
      }
    }
  ]
}